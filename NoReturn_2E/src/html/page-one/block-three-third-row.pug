//- MIXINs
mixin trefferzone(zone)
    // MIXIN : src/html/page-one/block-three-third-row.pug : trefferzone
    div(class="sheet-trefferzonen-eintrag")
        div(class="sheet-trefferzone-kopfzeile")
            div(class="sheet-kopfzeile")
                span(data-i18n="zone")
            div(class="sheet-kopfzeile")
                span(data-i18n="trefferpunkte_kurz")
            div(class="sheet-kopfzeile")
                span(data-i18n="ruestungswert_kurz")
            div(class="sheet-kopfzeile")
                span(data-i18n="materialkomponente_kurz")
        div(class="sheet-trefferzone-zeile")
            div 
                span= zone
            div
                span(name="attr_trefferpunkte-zone-"+zone)
            div
                input(type="number" name="attr_ruestungswert-zone-"+zone)
            div
                input(type="text" maxlength="1" name="attr_mk-zone-"+zone)

mixin schadenszaehler(trefferzone)
    // MIXIN : src/html/page-one/block-three-third-row.pug : schadenszaehler
    div(class="sheet-tooltip sheet-schadenszaehler sheet-trefferzone-"+trefferzone)
        input(type="number" name="attr_schadenszaehler-"+trefferzone value=0)
        span(class="sheet-tooltiptext" data-i18n="tooltip-schadenszaehler")

//- SEITENINHALT
div
    div(role="section")
        div(class="sheet-trefferzonen" role="section")
            h1(data-i18n="körperzonen")
            div(class="sheet-trefferzonen-bild")
                img(src="https://gorthian.de/roll20/noreturn/trefferzonen_300px.png")
                - for (var x = 2; x < 13; x++)
                    +schadenszaehler(x)
            div(class="sheet-box" style="text-align:center;width:100%;")
                button(type="action" class="sheet-button-d6" name="act_trefferzone")
                span(data-i18n="trefferzone-bestimmen")
    div(class="sheet-box" role="section")
        div(class="sheet-trefferzonen-liste")
            +trefferzone(12)
            +trefferzone(11)
            +trefferzone(6)
            +trefferzone(10)
            +trefferzone(5)
            +trefferzone(9)
            +trefferzone(4)
            +trefferzone(8)
            +trefferzone(3)
            +trefferzone(7)
            +trefferzone(2)
    
    div(class="sheet-box" role="section")
        h1(data-i18n="style-skills")
        div(class="sheet-style-skills-zeile")
            div(class="sheet-kopfzeile")
                span(data-i18n="style-skill")
            div(class="sheet-kopfzeile")
                span(data-i18n="stufe")
        fieldset(class="repeating_style-skills")
            div(class="sheet-style-skills-zeile")
                div
                    input(type="text" name="attr_style-skill-name")
                div
                    input(type="number" name="attr_style-skill-stufe")
            details     
                summary(class="sheet-summary-style-skill") &nbsp;
                textarea(name="attr_style-skill-info" class="sheet-style-skills")
    
    div(class="sheet-box")
        h1(data-i18n="charaktermerkmale")
        div(class="sheet-charaktermerkmale-zeile")
            div(class="sheet-kopfzeile")
                span(data-i18n="charaktermerkmal")
        fieldset(class="repeating_charaktermerkmale")            
            div(class="sheet-charaktermerkmale-zeile")
                div
                    input(type="text" name="attr_charaktermerkmal-name")
            details
                summary(class="sheet-summary-charaktermerkmale") &nbsp;
                textarea(name="attr_charaktermerkmal-info" class="sheet-style-skills")
            


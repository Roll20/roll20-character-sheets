{
  "name": "troika",
  "version": "1.0.3",
  "description": "Troika! RPG Character Sheet",
  "scripts": {
    "start": "run-p compile:*",
    "compile:sass": "npx sass ./src/scss/troika.scss ./troika.css --watch --no-source-map --no-charset",
    "compile:pug": "npx pug ./src/pug/troika.pug -o ./ -w -P"
  },
  "license": "MIT",
  "devDependencies": {
    "@anduh/pug-cli": "^1.0.0-alpha8",
    "@prettier/plugin-pug": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.0",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.56.1"
  }
}

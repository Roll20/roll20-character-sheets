+panel({ name: 'header' })
  - const { hidden, personality, custom, fields } = character.header;
  +block('header')
    each field in hidden
      +hidden(field)
    +span(personality).header__title
    +span(custom).header__title--custom
  +block('content')
    +editorblock('header')
      +block('edit')
        each field in hidden
          +hidden(field)
        each field in fields
          div(class=`header__${field.name}`)
            label(data-i18n=field.name, for=field.name)= field.label
            +field(field)

          if field.name === "personality"
            .header__personality--custom
              label(data-i18n=custom.name, for=custom.name)= custom.label
              +field(custom)
      +block('view')
        each field in fields.slice(1)
          - const divClass = field.span ? `col-${field.span}` : '';
          div(class=divClass)
            +span(field)
            label(data-i18n=field.name)= field.label

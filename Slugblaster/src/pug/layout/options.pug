- const options = data.options;

main.options
  section.options__main
    section.options__col
      .option.options__override-attitude
        - const { override, selects } = options.attitude;
        label(for=override.name)
          +field(override)
          span(data-i18n=override.name)= override.label
        .option__dropdowns--horizontal
          +hidden(override.name, 0).options-hide
          each field in selects
            .option__dropdown
              +field(field)
              label(data-i18n=field.name, for=field.name)= field.label

    aside
      .a-heartfelt-word
        span(data-i18n='you_are_small') You are small.

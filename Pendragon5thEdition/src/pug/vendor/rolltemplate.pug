.rolltemplates
  rolltemplate.sheet-rolltemplate-rolls
    .sheet-template-container
      // - Display a header on the template -
      .sheet-template-header {{#header}}{{header}}{{/header}}
      // - Display the dice roll in the template -
      .sheet-template-body
        | {{#luck}}
        .sheet-template-row.sheet-template-roll
          .sheet-template-col
            span {{luck}} 
            span Luck
          |{{#calamity}}
          .sheet-template-col
            span {{calamity}} 
            span Benefit/Calamity
          | {{/calamity}}
        | {{/luck}}

        | {{#dice}}
        .sheet-template-row.sheet-template-roll
          .sheet-template-col
            span {{dice}} 
            span Rolled
          | {{/dice}}
          |{{#threshold}}
          .sheet-template-col
            span {{threshold}} 
            span Threshold
          | {{/threshold}}
          | {{#dice}}
          .sheet-template-row.sheet-result-row
            // Modified skill is greater than 19
            | {{#rollGreater() threshold 19}}
            | {{#rollGreater() dice 19}}			
            .sheet-rollResult 
              span.text-center(data-i18n='Critical')
            | 			{{/rollGreater() dice 19}}
            |     			{{#^rollGreater() dice 19}}			
            .sheet-rollResult 
              span.text-center(data-i18n='Success')
            | 			{{/^rollGreater() dice 19}}
            |     		{{/rollGreater() threshold 19}}
            |     		{{#^rollGreater() threshold 19}}
            |     			{{#rollBetween() dice fumbleVal 20}}
            .sheet-rollResult 
              span.text-center(data-i18n='Fumble')
            | 			{{/rollBetween() dice fumbleVal 20}}
            |     			{{#^rollBetween() dice fumbleVal 20}}
            |     				{{#rollTotal() dice threshold}}
            .sheet-rollResult 
              span.text-center(data-i18n='Critical')
            | 				{{/rollTotal() dice threshold}}				
            |     				{{#^rollTotal() dice threshold}}
            |     					{{#rollGreater() dice threshold}}
            .sheet-rollResult 
              span.text-center(data-i18n='Failure')
            | 					{{/rollGreater() dice threshold}}
            |     					{{#^rollGreater() dice threshold}}      
            .sheet-rollResult 
              span.text-center(data-i18n='Success')
            | 					{{/^rollGreater() dice threshold}}
            |     				{{/^rollTotal() dice threshold}}
            |     			{{/^rollBetween() dice fumbleVal 20}}
            |     		{{/^rollGreater() threshold 19}}
          | {{/dice}}


          |{{#damage}}
          .sheet-template-row.sheet-template-damage
            .sheet-template-col
              | {{damage}}
              br
              span Rolled
            | {{/damage}}
        
            |{{#knightly}}
            .sheet-template-row.sheet-template-damage
              .sheet-template-col
                | {{knightly}}
                br
                span Rolled
              | {{/knightly}}

              |{{#season}}
              .sheet-template-row.sheet-season
                .sheet-template-col
                  | {{#rollTotal() season 1}}
                  | {{season}}
                  br
                  span Spring
                  | {{/rollTotal() season 1}}
                  | {{#rollBetween() season 2 4}}
                  | {{season}}
                  br
                  span Summer
                  | {{/rollBetween() season 2 4}}
                  | {{#rollBetween() season 5}}
                  | {{season}}
                  br
                  span Autumn
                  | {{/rollBetween() season 5}}
                  | {{#rollTotal() season 6}}
                  | {{season}}
                  br
                  span Winter
                  | {{/rollTotal() season 6}}
                | {{/season}}

        | {{#desc}}
        .sheet-template-row
          span.sheet-template-desc {{desc}}
        | {{/desc}}

        


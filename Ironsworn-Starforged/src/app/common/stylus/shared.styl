btn()
  display flex
  width auto
  font-size 14px
  padding 0
  border 2px solid #494a4c
  cursor pointer

input-highlight(shadow)
  outline 3px solid #fd0
  outline-offset 0
  box-shadow inset 0 0 0 shadow

hide()
  visibility hidden
  transition opacity 1s ease-out
  opacity 0
  height 0
  overflow hidden

show-hide(time = 0.2s)
  visibility visible
  height auto
  opacity 1
  transition time ease

borderCommon()
  border 2px solid #4C4D4F

dark()
  background #4C4D4F
  color white

std-font(primary = false)
  if primary
    font-family primary, Arial, sans-serif
  else
    font-family , Arial, sans-serif
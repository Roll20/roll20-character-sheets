.grid-4 {
  height: 6em;
  width: 6em;
  display: grid;
  padding: 0.2em;
  gap: 0.2em;
}

.segment {
  height: 4.75em;
  width: 4.75em;
  background: white;
}


.grid-4 .segment-1 {
 grid-row: 1;
 grid-column: 2;
}

.grid-4 .segment-2 {
 grid-row: 2;
 grid-column: 2;
}

.grid-4 .segment-3 {
 grid-row: 2;
 grid-column: 1;
}

.grid-4 .segment-4 {
 grid-row: 1;
 grid-column: 1;
}

.grid-6 {
  height: 15em;
  width: 15em;
  display: flex;
  gap: 0.2em;
  padding: 0.5em;
  --f: calc(var(--s) * 1.732 + 4 * var(--m) - 1px);
}

.grid-6::before {
    content: "";
    width: calc(var(--s) / 2 + var(--m));
    float: left;
    height: 120%;
    shape-outside: repeating-linear-gradient(rgba(0,0,0,0) 0 calc(var(--f) - 3px), #000 0 var(--f));
}


.clock {
  display:flex;
  --s: 39px;
  --m: 1px; 
  --f: calc(var(--s) * 1.732 + 4 * var(--m) - 1px);
  width: 8.7em;
 }

 .hex-container-6 {
   font-size: 0;
 }
 
 .hex-container-6 .segment-hex {
    width: var(--s);
    margin: var(--m);
    height: calc(var(--s)*1.1547); 
    display: inline-block;
    font-size:initial;
    clip-path: polygon(0 25%, 50% 0, 100% 25%, 100% 75%, 50% 100%, 0 75%);
    margin-bottom: calc(var(--m) - var(--s)*0.2885);
    padding: 0;
    cursor: pointer;
}

 .hex-container-6.segment-hex:hover {
   background-color: #555555;
 }

 .hex-container-6.segment-hex::before {
   box-sizing: none
 }
 
  .hex-container-6.segment-hex::before::after {
   box-sizing: none
 }
        

 .hex-container-6::before {
   content: "";
   width: calc(var(--s) / 1 + var(--m));
   float: right;
   height: 10%; 
   shape-outside: repeating-linear-gradient(#0000 0 calc(var(--f) - 3px), #000 0 var(--f));
}

.hex-container-6 .segment-1.segment-hex {
  margin-left: calc(var(--s)/1.9);
}

.hex-container-6 .segment-5.segment-hex {
  margin-left: calc(var(--s)/1.9);
}

.segment-background
  background-color white
  width 100%
  height 100%

label.segment-grid
  margin 0
  padding 0
  cursor pointer


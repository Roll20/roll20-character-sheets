@import './mode-template.styl';

backgroundColor = #fff
textColor = #4C4D4F

light-styles()
  color textColor
  h1, h2, h3, h4, h5, h6, p, span, label
    color @color
  .surface
    color @color
    &.roll-label,
    &.ship-category-info
      borderCommon()
  .surface-2
    &.roll-label
      borderCommon()
  label.surface,
  .static-btn,
  .toggle-btn,
  .page-label
    &:hover
      background #ccc
      transition 0.5s ease
  h3
    color #4C4D4F
  .stat-set
    margin-left 5em
  
  input[type=text]
    &::placeholder
      color textColorPlaceholder
    font-weight: 600;
    &:focus
      input-highlight(3px)
  
  .btn-input
    &:checked
      & ~ .btn-content
        background textColor
        color backgroundColor

  .oracle-table-preview
    p
      color backgroundColor

  .ship-category-info
    h3
      color backgroundColor

  .progress-input
    &:hover
      background #3d3d3d
      transition 0.3s ease
  
  .list-group-container
    ul
      li.list-group-item
        & > *
          background-color #fff
        &:nth-child(2n+1) > *
          background-color #e4e4e4

    .selected-move
      z-index 3
      &:checked
        & ~ .move-name,
        & ~ label.toggle-btn
          background #434b4d
          color #fff
    
    label.toggle-btn
      &:hover
        background-color #cccccc
  
  .roll-resource-label,
  input[type=checkbox].momentum-burn:hover ~ div.momentum-burn-back,
  .momentum-box-input:hover ~ .momentum-box-back
    &:hover
      background #ccc
      transition 0.5s ease

  label
    &.stat-toggle
      &:hover
        background #ccc
        transition 0.5s ease

  progress(textColor, backgroundColor)
@import './mode-template.styl';

backgroundColor = #1f1f1f
textColor = #c0c0c0
boxShadow = #141414
rootHover = #3d3d3d
surfaceHover = #464646
surface2Hover = #5f5f5f
surfaceBackground = #323232
surface2Background = #4c4c4c
listPrimary = #323232
listSecondary = #272727
highlightText = #e8e8e8
hoverDefault = 0.5s ease

.sheet-darkmode
  .sheetform
    background-color backgroundColor

  background backgroundColor
  color textColor
  h1, h2, h3, h4, h5, h6, p, li, td, span, textarea
    color @color

  label.surface,
  .static-btn,
  .toggle-btn,
  .page-label
    &:hover
      background rootHover
      transition hoverDefault
  .surface
    background surfaceBackground
    border 0
    &.roll-label
      border @border
    color @color
    box-shadow 2px 2px 3px 1px boxShadow
    span, h3, label
      color @color
    .progress-input-holder input[min], 
    .large-progress-input-holder input[min],
    input[min] + span, 
    input[min].large-input + span
      background @background
    label.surface,
    .static-btn,
    .toggle-btn,
    .page-label
      &:hover
        background surfaceHover
        transition hoverDefault
  .btn-input
    &:checked
      & ~ .btn-content
        background textColor
        color backgroundColor
  
  label.surface-2
    &:hover
      background surface2Hover
  .surface-2
    background surface2Background
    border 0
    color @color
    box-shadow 2px 2px 3px 1px backgroundColor
    span
      color highlightText
    &.roll-label
      background surface2Hover
    .static-btn,
    .toggle-btn,
    .page-label
      &:hover
        background surface2Hover
        transition hoverDefault
  .stat-set
    margin-left 5.8em

  .write-in-container,
  .ship .info
    input
      background none
      color @color

  .oracle-row:nth-child(2n+1),
  .oracle:nth-child(2n+1)
    background-color: listPrimary;

  button[type="roll"].roll-show
    color #acacad
  
  input[type=text]
    font-weight: 600;
    &:focus
      input-highlight(0px)

  input
    &.vow-name,
    &.progress-name
      color @color

  .difficulty
    input
      &:checked
        & ~ h5
          background textColor
          color backgroundColor
    h5
      border-radius 0.3em

  .challenge-show
    &:hover
      background rootHover
      transition hoverDefault
  
  .progress-input
    &:hover
      background rootHover
      transition 0.3s ease
  .list-group-container
    color @color
    ul
      li.list-group-item
        & > *
          background-color listPrimary
        &:nth-child(2n+1) > *
          background-color listPrimary
    .selected-move
      z-index 3
      &:checked
        & ~ .move-name,
        & ~ label.toggle-btn
          background textColor !important
          color backgroundColor !important

    label.toggle-btn
      &:hover
        background-color rootHover !important
  
  .roll-resource-label,
  label.stat-toggle,
  input[type=checkbox].momentum-burn:hover ~ div.momentum-burn-back,
  .momentum-box-input:hover ~ .momentum-box-back
    &:hover
      background rootHover
      transition hoverDefault

  progress(textColor, backgroundColor)
//-
  opts: {
    type: '<any html btn type>',
    text: 'example',
    attribute: 'example'

    // Optional
    classes: 'example-class'
    action: 'static' or 'toggle' (default)
  }

mixin btn(opts)
  - var action = opts.action ? opts.action : 'toggle'
  if opts.classes
    label(class=`${action}-btn ${opts.classes}`)
      if opts.pure_attr
        input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}`)
      else
        if opts.checked
          input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}_button` checked)
        else
          input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}_button`)
      span.i18n-text.btn-content(data-i18n=opts.translationId)=opts.text
  else
    label(class=`${action}-btn`)
      if opts.checked
        input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}_button` checked)
      else
        input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}_button`)
      span.i18n-text.btn-content(data-i18n=opts.translationId)=opts.text
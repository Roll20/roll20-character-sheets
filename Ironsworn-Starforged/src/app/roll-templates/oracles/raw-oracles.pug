mixin rawOracles
  | {{#almostCertain}}
  | {{#rollBetween() almostCertain 11 100}}
  .sheet-result-row
    .sheet-oracle-dice
      span {{almostCertain}}
    .sheet-oracle-table-text
      span.i18n-text(data-i18n='answer-yes')=translation['answer-yes']
  | {{/rollBetween() almostCertain 11 100}}
  | {{#^rollBetween() almostCertain 11 100}}
  .sheet-result-row
    .sheet-oracle-dice
      span {{almostCertain}}
    .sheet-oracle-table-text
      span.i18n-text(data-i18n='answer-no')=translation['answer-no']
  | {{/^rollBetween() almostCertain 11 100}}
  +matchRolls
  | {{/almostCertain}}

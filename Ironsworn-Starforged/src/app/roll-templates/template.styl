@import './mixins/outcomes'
@import './mixins/rolls'
@import './oracles/oracles'

.sheet-rolltemplate-starforged_moves .sheet-roll-container,
.sheet-rolltemplate-starforged_progress .sheet-roll-container
  roll-container()

.sheet-rolltemplate-starforged_moves .sheet-result-row,
.sheet-rolltemplate-starforged_progress .sheet-result-row
  display flex
  justify-content space-between

.sheet-rolltemplate-starforged_moves .inlinerollresult,
.sheet-rolltemplate-starforged_progress .inlinerollresult
  inline-roll()

.sheet-rolltemplate-starforged_progress .sheet-action-score .fullfail,
.sheet-rolltemplate-starforged_moves .sheet-action-score .fullfail
  border 2px solid #d22e53

.sheet-rolltemplate-starforged_progress .sheet-action-score .fullcrit,
.sheet-rolltemplate-starforged_moves .sheet-action-score .fullcrit
  border 2px solid #42829e

.sheet-rolltemplate-starforged_progress .sheet-challenge-dice .fullcrit,
.sheet-rolltemplate-starforged_moves .sheet-challenge-dice .fullcrit
  border 2px solid #d22e53

.sheet-rolltemplate-starforged_progress .sheet-challenge-dice .fullfail,
.sheet-rolltemplate-starforged_moves .sheet-challenge-dice .fullfail
  border 2px solid #42829e

.sheet-rolltemplate-starforged_progress .sheet-roll-outcome,
.sheet-rolltemplate-starforged_moves .sheet-roll-outcome
  background #403f4b
  border 1px solid black

.sheet-rolltemplate-starforged_moves .sheet-subheader,
.sheet-rolltemplate-starforged_progress .sheet-subheader
  sub-base(#23222b, 0.4em 1em 0.4em 1em)
  text-transform uppercase
  font-style normal

.sheet-rolltemplate-starforged_moves .sheet-subfooter,
.sheet-rolltemplate-starforged_progress .sheet-subfooter
  sub-base(#403f4b, 0.4em 0em 0.4em 0em)
  width 100%
  font-style italic

.sheet-rolltemplate-starforged_moves .sheet-result-body,
.sheet-rolltemplate-starforged_progress .sheet-result-body
  padding 0.4em 1em 0.4em 1em

.sheet-rolltemplate-starforged_moves .sheet-alert,
.sheet-rolltemplate-starforged_progress .sheet-alert
  margin 0.2em 0.3em 0.2em 0.3em
  border-radius 1em
  width auto
  padding 0.5em

.sheet-rolltemplate-starforged_moves .sheet-opportunity,
.sheet-rolltemplate-starforged_progress .sheet-opportunity
  outcome-base(#40819f)

.sheet-rolltemplate-starforged_moves .sheet-strong-hit,
.sheet-rolltemplate-starforged_progress .sheet-strong-hit
  outcome-base(#63a9ca)

.sheet-rolltemplate-starforged_moves .sheet-weak-hit,
.sheet-rolltemplate-starforged_progress .sheet-weak-hit
  outcome-base(#83dbff)

.sheet-rolltemplate-starforged_moves .sheet-miss,
.sheet-rolltemplate-starforged_progress .sheet-miss
  outcome-base(#d8566f)

.sheet-rolltemplate-starforged_moves .sheet-complication,
.sheet-rolltemplate-starforged_progress .sheet-complication
  outcome-base(#d22e53)

.sheet-rolltemplate-starforged_moves .userscript-tcat,
.sheet-rolltemplate-starforged_progress .userscript-tcat
  font-weight 700

.sheet-rolltemplate-starforged_moves .sheet-momentum-title
  line-height 22px

.sheet-rolltemplate-starforged_moves .sheet-roll-container a[href^="!"],
.sheet-rolltemplate-starforged_moves .sheet-roll-container a[href^="~"]
  background-color transparent
  padding 5px
  color white
  display inline-block
  border none
  text-transform uppercase
  font-weight bold
  width 100%
  text-align center

.sheet-rolltemplate-starforged_moves .sheet-roll-button
  justify-content center
  background #5e5d6f
  border-radius 0.4em
  margin 0.2em
  &:hover
    background #9290ad
    transition 0.5s
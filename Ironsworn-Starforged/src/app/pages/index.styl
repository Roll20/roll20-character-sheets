.changelog
  border 2px solid #4C4D4F
  margin-bottom 1em
  padding 1em

.center
  text-align center

.close-changelog
  border 2px solid #4C4D4F
  cursor pointer
  padding 0
  margin 0.5em 0 0 0
  text-align: center
  &:hover
    background #ccc
    transition .5s ease

input.changelog:checked ~ div.changelog
  display none

.modes
  display flex
  justify-content space-evenly

h2.mode-title
  text-align center

div.mode-title
  margin-bottom 2em

label.mode
  text-align center

label.mode
  margin 0.5em
  padding 0
  cursor pointer
  box-shadow: 1px 1px 19px 6px rgba(0,0,0,0.15);
  opacity 1
  z-index 5
  width: auto;
  &:hover
    h4
      color #797979
      transition: .5s ease;
    .mode-image
      opacity 0.7
      transition: .5s ease;
  h4
    margin-bottom 0.5em
    margin-top 0.5em

input[type=radio].character-mode:checked ~ div.character-mode,
input[type=radio].shared-mode:checked ~ div.shared-mode
  display block

input[type=checkbox].modes-show:checked ~ div.modes-show
  display block

div.mode
  display: flex
  justify-content: center
  width fit-content
  width -moz-fit-content
  margin 0

.mode-image
  display flex

input[type=radio].connections:checked ~ div.connections,
input[type=radio].summary:checked ~ div.summary,
input[type=radio].vows:checked ~ div.vows,
input[type=radio].assets:checked ~ div.assets,
input[type=radio].moves:checked ~ div.moves,
input[type=radio].progress-page:checked ~ div.progress-page,
input[type=radio].oracles:checked ~ div.oracles,
input[type=radio].settings:checked ~ div.settings,
input[type=radio].legacies:checked ~ div.legacies,
input[type=radio].ship:checked ~ div.ship
  display block
  show-hide()

.sub-header
  margin-top 1em
  border-bottom 3px solid #4C4D4F

.ship-grid
  margin-top 1em
  display grid
  justify-content space-around
  grid-row-gap 1em
  h3
    margin-bottom 0.6em
  .ship-category-info
    h3
      background #4c4d4f
  .asset
    grid-column 1
    margin 0
    grid-row 1
    height fit-content
  .ship-category-info
    grid-column 2
    grid-row 1
    border-radius 1em
    .ship-onboard
      margin 0.3em
      border-radius 1em
      .btn-content
        border-radius 1em
    .info
      padding 0em 0.4em
    h3
      &:nth-child(1)
        border-top-left-radius 0.6em
        border-top-right-radius 0.6em

    input[type=text]
      border 0
      border-bottom 2px solid #4c4d4f
      border-radius 0
      padding 0
      padding-left 0.3em
      width 100%
  .ship-category-support-vehicles
    grid-row 2
    grid-column 2
    width 320px
  .ship-category-modules
    grid-row 2
    grid-column 1
    width 320px
  .impact-btn
    width 45%
  .impact-group
    width 100%

.ship-btn
  margin 0
.resources
  display grid
  justify-content space-between
  .row1
    display grid
    grid-row 1
    margin-bottom 0.2em
    border 1px solid #4C4D4F
  .row2
    display flex
    grid-row 2
    border 1px solid #4C4D4F
    margin-bottom 0.1em

.resource
  display flex
  borderCommon()
  border-left 1px solid #4C4D4F
  .resource-value-box
    display flex
    width 100%

label
  &.health-reset
    font-size 14px
    margin 0
    padding 2px 7px 2px 6px
    cursor pointer
    &:hover
      background #ccc
      transition 0.5s ease

h3
  &.health-max
    font-size 14px
    margin-right 0.3em
    line-height 23px
    padding-left 0.3em
  &.health-max-value
    padding-right 0.3em

.health-max-value
  font-size 14px
  line-height 22px
  color #555

.resource-value
  font-size 14px
  width 38px
  font-weight bold
  padding 0
  padding-left 4px
  border-radius 0
  background #ccc
  margin 0
  height auto
  cursor pointer
  border-left 1px solid #4C4D4F
  &:focus
    input-highlight(3px)

.resource-title
  font-size 14px
  width auto
  line-height 9px
  padding 0.5em 0.5em 0.5em 0.5em
  border-right 1px solid #4C4D4F
  border-left 1px solid #4C4D4F
  text-transform uppercase

input[type=text].resource-value
  width 22px
  border none
  cursor text

.health-max-box
  display flex
  background #ccc

.health-status-box
  display flex

.load-value
  width 27px

.character-name
  grid-column 1
  input
    width 100% !important
    border none

.character-pronouns
  input
    width 100% !important
    border none

.character-callsign
  grid-column 2
  input
    width 100% !important
    border none

.roll-resource-label
  text-transform uppercase
  margin 0
  padding 0.15em 0.4em 0em 0.4em
  width auto
  font-size 14px
  cursor pointer
  text-align center
  border-left 1px solid #4C4D4F

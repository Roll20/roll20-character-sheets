.bonds-track
  width 437px
  margin-left 203px
  margin-top 0.5em
  .progress-row
    grid-template-columns: 0px repeat(10, 43.5px) 110px;

.connections
  margin-bottom 0px

.connection-component
  margin-top 1em

.bond
  display flex
  flex-direction column
  justify-content center
  align-items center

.connection-container
  border 2px solid #4C4D4F
  border-radius 1em
  margin-bottom 1em
  padding 0.5em 1em

.connection-notes
  width 98.5%
  resize vertical

.connection-name,
.connection-location,
.connection-descriptors
  border none
  border-radius 0em
  background transparent
  padding 0
  padding-left 0.5em

.connection-descriptors
  width 43%

.connection-location
  width 40%

p
  &.connection-title
    text-align left
    font-weight bold
    margin 0 0 0px
    padding 0.1em 0.3em 0.1em 0.5em
    text-transform uppercase
    std-font('Montserrat')
    display inline
    border-radius 0

.details-btn
  text-transform uppercase
  display inline-flex
  margin 0.3em 0.5em
  border-radius 2em
  .btn-content
    border-radius 0.5em
    padding 0em 1em

input[type="checkbox"].show-connection-info
  width 4.5em
  height 18px
  top 0
  opacity 0
  border-radius 0
  padding 2px 4px
  &:checked
    & ~ div
      &.show-connection-info
        display flex
        flex-flow row wrap
        show-hide()
    & ~ span
      &.show-connection-info
        border-radius 0
        padding 2px 4px
        border 1px solid #4C4D4F
        background-color #c0c0c0
        color #fff
  &:hover
    & ~ span
      &.show-connection-info
        border-radius 0
        padding 2px 4px
        background-color #ccc
        color #4c4d4f
        transition 0.5s ease

span
  &.show-connection-info
    margin-left -4.9em
    border-radius 0
    padding 2px 4px
    border 1px solid #4C4D4F
    font-weight bold

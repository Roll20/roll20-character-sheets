.vow-container
  padding 0em 0.5em 0.5em 0.5em
  border-radius 0.5em
  margin 0.5em 0em

input
  &.vow-name
    border 2px solid #4C4D4F
    border-radius 0
    margin-bottom 0.2em
    margin-top 1em
    border 2px solid #4C4D4F
    background transparent
    border-radius 0
    margin-bottom 0.2em
    &:focus
      outline 3px solid #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px

.fulfill-vow:hover,
.mark-vow:hover,
.vow-clear-label:hover
  color #4c4d4f
  transition 0.5s ease

.vows
  margin-bottom 0px

.difficulty
  border-radius 0.3em

.vows-header
  display flex
  justify-content space-around
  align-items center
  margin-bottom 10px

.vow
  display flex
  flex-direction column
  justify-content center
  align-items center
  .btn
    border-radius 0.3em

.vow-name
  width 100%
  font-weight bold
  font-size 14px

.difficulty
  border 2px solid #4C4D4F
  margin 0.2em 0.5em 0.2em 0.5em
  padding 0
  cursor pointer
  h5
    text-align center
  input
    &:checked
      & ~ h5
        background #4C4D4F
        color #fff

.btn-div
  display inline
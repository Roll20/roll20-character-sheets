$categories = {
  'path':#3B7FA9,
  'companion':#3C8B8A,
  'module':#7E5990,
  'support-vehicle':#485690,
  'deed':#4B974E,
  'command-vehicle': #99A3AD
}

for key, category in $categories
  .category-{key}
    .asset-details
      .category
        color category
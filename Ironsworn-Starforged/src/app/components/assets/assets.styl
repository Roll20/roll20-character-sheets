  color #fff
  background #4C4D4F
  width auto
  font-size 15px
  font-weight bold
  text-transform uppercase
  -webkit-appearance menulist
  margin 6px 4px

.sub-dropdown
  -webkit-appearance menulist
  width auto
  margin 7px 4px
  font-weight bold
  text-transform uppercase


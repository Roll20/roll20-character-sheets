  width 100%
  display flex
  flex-direction column
  justify-content center
  align-items center
  border-radius 0%
  background transparent
  border 2px solid #4C4D4F
  padding 5px
  margin-bottom 2px

.asset-track-wrapper-wordy
  text-transform uppercase
  .asset-track-box
    flex-direction row

.asset-track-box-display
  font-size 17px
  font-weight bold

.ability-top

.stats
  justify-content space-evenly
  align-items center
  border-radius 0%
  margin-bottom 1em

.stat
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin 1em

.stats-title
  width 100px

.stats-input
  font-weight bold
  width 60px
  line-height 40px
  font-size 28px
  text-align center
  height 50px !important
  border-radius 0

input
  &.stats-input
    borderCommon()
    background #e6e7e8
    &:focus
      outline 3px solid #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px

label
  &.roll-label
    margin 0
    padding 0.1em 0.4em
    width auto
    cursor pointer
    text-align center
    line-height 1.4em
    border-radius 1em
  &.stat-toggle
    border-radius 1em
    margin 0
    padding 0
    borderCommon()
    text-align center
    cursor pointer

input[type=radio].stat-set
  &:checked
    & ~ div
      &.stat-set
        show-hide()
        display flex
        width auto

input[type=radio].stat-edit
  &:checked
    & ~ div
      &.stat-edit
        show-hide()
        display flex
        width auto

div
  &.stat-toggle
    &.set-toggle
      width 100%
      height 0
      margin 4em 1em 0em 1em
    &.edit-toggle
      transform rotate(90deg)
      text-transform uppercase
      width 100%
      height 0
      margin-top 3.45em
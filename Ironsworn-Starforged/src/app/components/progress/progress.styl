.progress-tab
  padding 0.3em
  border-radius 0.3em
  .btn,
  span
    border-radius 0.3em


.progress-header
  display flex
  justify-content space-around
  align-items center
  margin-top 0.3em

.progress-container
  display flex
  flex-direction column
  justify-content center
  align-items center

.progress-row
  .btn
    border-radius 0.3em

.progress-name
  width 100%
  font-weight bold
  font-size 14px

input
  &.progress-name
    background transparent
    border 2px solid #4C4D4F
    border-radius 0
    margin-bottom 0.2em

.progress-input
  width 40px
  height 40px
  font-size 22px
  font-weight bold
  background transparent
  text-align center
  justify-content center
  align-items center
  padding 2px 0px 0px 12px
  margin 0px
  cursor pointer
  borderCommon()
  border-radius 0
  &:focus
    outline 3px solid #fd0
    outline-offset 0
    box-shadow inset 0 0 0 2px

/* button to control display of countdown boxes */

.progress-holder
  display flex

input.progress-name
  margin-bottom 0px

.challenge-show
  text-transform uppercase
  padding 0
  margin 0
  borderCommon()
  width auto
  height auto
  cursor pointer
  border-left 0
  &:hover
    transition 0.5s ease

.challenge-show-back
  height 100%
  padding 0em 1em 0em 1em
  line-height 25px

input[type='checkbox'].challenge-show:checked ~ div.challenge-row
  show-hide(0.7s)

input[type='checkbox'].challenge-show-button:checked ~ div.challenge-show-back
  background #4c4d4f
  color white

/* grid container to hold challenge boxes and countdown boxes */

.challenge-row, .progress-row
  display grid
  grid-template-columns 151px repeat(10, 43.5px) 110px
  align-items center
  text-transform uppercase
  // upper casing the whole row instead of child elements cuz the relevant children don't have classes

/* Individual boxes */

label.challenge-label
  padding-left 0.5em
  display block
  height 18px
  margin 0px

.challenge-box
  borderCommon()
  padding 0
  display inline-flex
  height 36px
  width 36px
  margin 0.2em 0em
  cursor pointer

.challenge-fill
  height 100%
  width 100%

input[type="checkbox"].challenge:checked ~ .challenge-fill
  background #646464

input[type="checkbox"].challenge:hover ~ .challenge-fill
  background #333333

.blank-index
  display: inline-block
  height: 40px
  width: 40px

/* crazy stuff for svg crosses */

.progress-input-holder
  position relative
  margin 0.3em 0em

.progress-input-holder input[min], input[min] + span
  display none
  position absolute
  top 2px
  left 2px
  width 36px
  height 36px
  pointer-events none
  background white

/* large inputs */

.large-progress-input
  width 60px
  height 60px
  font-size 22px
  font-weight bold
  background transparent
  text-align center
  justify-content center
  align-items center
  padding 2px 0px 0px 12px
  margin 0px
  cursor pointer
  borderCommon()
  border-radius 0.3em
  &:focus
    outline 3px solid #fd0
    outline-offset 0
    box-shadow inset 0 0 0 2px


/* crazy stuff for large svg crosses */

.large-progress-input-holder
  position relative
  margin 0

.large-progress-input-holder input[min], input[min].large-input + span
  display none
  position absolute
  top 2px
  left 2px
  width 56px
  height 56px
  pointer-events none
  background white

.oracle-btn
  margin 0
  width 100%

.oracle-name
  // text-transform capitalize

.oracles
  display: flex
  flex-wrap: wrap
  flex-direction: column

.oracle
  margin: 0em
  color: #4C4D4F
  display: flex

.oracle-subtitle, .oracle-column-head
  background-color #4c4d4f
  color #fff
  padding-right 0.5em
  padding-left 0.35em

.oracle-column-head
  font-weight 600

.oracle-subtitle
  text-transform uppercase

.oracle-table-preview
  std-font('Montserrat')
  font-weight 500
  caption.oracle-description, div.oracle-description
    std-font('Montserrat')
    background-color #4C4D4F
    color #fff
    p, ol, ul
      std-font('Montserrat')
      padding 0.5em
  table
    std-font('Montserrat')


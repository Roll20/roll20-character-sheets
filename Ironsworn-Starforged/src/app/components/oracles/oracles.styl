  show-hide()

.oracle-container
  opacity 1
  std-font('Montserrat')
  font-size 1em
  font-weight bold
  justify-content space-between
  padding 0.1em

.oracle-column
  display flex
  flex-direction column

.oracle-sub-column
  width 50%

.oracle-roll
  // width auto
  // height auto

.theme-outline
  border: 1px solid #4C4D4F

span.oracle-result
  width 80%
  font-size 13px

.oracle-box
  borderCommon()
  box-sizing border-box
  height fit-content

.oracle-title
  background-color #4C4D4F
  color #fff
  border-bottom 1px solid #4C4D4F
  font-size 1.4em
  font-weight bold
  padding-left 5px
  padding-right 5px
  text-transform uppercase
  text-align center

.oracle-table-preview
  width auto

table.oracle-table
  width -moz-available
  width -webkit-fill-available
  width stretch
  // table-layout auto

tr.oracle-row
  display table-row

.oracle-show
  display inline-flex
  font-size 1em
  margin 0em
  padding 0.3em

.oracle-show:hover
  background #969696
  cursor pointer
  transition .5s ease

.oracle-table
  border 4px solid #4C4D4F

.flex-table
  display flex

.oracle-row:nth-child(2n+1),
.oracle:nth-child(2n+1)
  background-color: #e4e4e4

.oracle-row
  padding 3px 0px 3px 0px
  display flex
  height auto

tr.oracle-row
  display table-row

tr.oracle-row td
  padding 3px 6px // compensates for lack of row padding on tables

.oracle-row-2
  width 50%

.oracle-row-3
  width: 33.33%

.oracle-row-4
  width: 25%

td.oracle-roll
  // width: 20%
  padding-left 0.5em
  width 3.4em

th.oracle-column-head.oracle-roll
  white-space nowrap

.oracle-table-2-column
  column-wrap(48em)

.oracle-table-3-column
  column-wrap(63em)

.oracle-table-4-column
  column-wrap(93em)

.oracle-table-2-column-group
  display flex

.table-list
  width 33%
  height 44em
  overflow auto
  border 3px solid #4C4D4F
  padding 0
  margin 0
  margin-right 0.3em

.oracle-column.table-main
  width 66%

.oracle-footer
  background-color: #434b4d
  color: #ffffff
  line-height: 0.9em
  font-size: 0.9em
  std-font('Montserrat')
  font-variant: small-caps
  font-weight: bold
  text-align: left
  padding 0.5rem
  border-bottom-right-radius 1em
  border-bottom-left-radius 1em

input[type=radio].oracle-overview:checked ~ div.oracle-overview,
input[type=radio].oracle-preview:checked ~ div.oracle-preview
  show-hide()

.oracle, .oracle-overview-container
  .button-container
    width max-content
    button.btn.roll-show[type='roll']
      display inline-block
      height 100%
      width 1.25em
      // padding 0px 3px
      &:hover
        transition 0.3s ease
        background #606060 !important
        color #fff
      &:before
        vertical-align middle

.oracle-overview-container
  columns 3
  column-gap 1em
  .oracle-box
    -webkit-column-break-inside avoid
    page-break-inside avoid
    break-inside avoid
    border-radius 1em
    margin-bottom 1em
    .oracle:nth-last-child(1)
      border-bottom-left-radius 1em
      border-bottom-right-radius 1em
      .button-container
        border-bottom-left-radius 0.6em
      .oracle-btn
        border-bottom-right-radius 0.6em
    .oracle-title
      border-top-left-radius 0.5em
      border-top-right-radius 0.5em

.oracle-preview-container
  display flex

.oracle-preview
  .oracle-box
    width 100%

.column-wrap
  width 50%

.legacies
  display grid
  grid-gap 1em
  justify-items center
  .legacy
    padding 0.5em
    border-radius 0.5em
    width 97%
  .progress-boxes
    text-transform: uppercase;
    display: grid;
    grid-auto-flow: column;
    justify-content: space-between;
    .progress-input
      width: 60px
      height: 60px
  .experience-boxes
    display: flex;
    justify-content: space-between;
  .title
    grid-column 1
    font-size 1.2em
    font-weight bold
    padding 0.3em 0em 0em 0em
  .ten-marker
    justify-self right
    padding 0
    margin: 0
    margin-bottom 0.8em
    height fit-content
    border-radius 0.3em
  .legacy-roll
    margin: 0
    border-radius 0.3em
  .legacy-row-1
    display grid

.quests,
.bonds,
.discoveries
  display grid
  grid-gap 0.3em

label.experience-box
  &:nth-child(1)
    border-top-left-radius 0.3em
    border-bottom-left-radius 0.3em
    div
      border-top-left-radius 0.16em
      border-bottom-left-radius 0.16em

  &:nth-last-child(1)
    border-top-right-radius 0.3em
    border-bottom-right-radius 0.3em
    div
      border-top-right-radius 0.16em
      border-bottom-right-radius 0.16em

  border 2px solid #4C4D4F
  padding 0
  display inline-flex
  height 1em
  margin 0.2em 0em
  cursor pointer

input.experience-box
  opacity 0
  cursor pointer
  vertical-align top

.experience-fill
  height 100%
  width 100%

input[type="checkbox"].experience-box:checked ~ .experience-fill
  background #4c4d4f

input[type="checkbox"].experience-box:hover ~ .experience-fill
  background #E6E7E8
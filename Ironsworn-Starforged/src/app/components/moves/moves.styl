div
  &.search-bar
    display flex
    justify-content center
    width 100%
    margin 1em 0em 0.5em 0em
  &.preview-bar
    justify-content space-between
    width 100%
    display flex
    margin 0em 0em 0.5em 0em
  &.search-preview-bar
    display flex
    width auto
  &.move-nav-content
    padding 0.2em
    width 100%

input
  &.search-preview-bar
    width 17.6em
    borderCommon()
    border-radius 0
    &:focus
      outline 3px solid #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px
  &.search-bar
    width 50%
    borderCommon()
    &:focus
      outline 3px solid #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px
  &.table-btn
    &:checked
      & ~ div
        &.move-nav-content
          background #4c4d4f
          color #fff
          transition 0.5s ease

.preview-container
  display flex
  justify-content space-between
  font-size 1em
  flex-flow row
  font-weight normal
  height auto

.move-preview-container
  .surface
    border-top-right-radius 1.5em
    border-top-left-radius 1.5em
    border-bottom-left-radius 1em
    border-bottom-right-radius 1.5em

.list-group-container
  columns 3
  column-gap 1em
  margin-bottom 3em
  section.list-group
    borderCommon()
    border-width 4px
    background-color #4C4D4F
    box-sizing border-box
    margin 0em
    margin-bottom 1em
    height fit-content
    height -moz-fit-content
    // border-radius 1.3em
    -webkit-column-break-inside avoid
    page-break-inside avoid
    break-inside avoid
    border-radius 1em
    overflow hidden
    h3.list-group-title
      color #fff
      font-size 1.4em
      font-weight bold
      padding-left 5px
      padding-right 5px
      text-transform uppercase
      text-align center
      display inline-block
      vertical-align text-bottom
      width stretch
      width -moz-available
    ul
      display grid
      gap 4px
      padding 0
      margin 0
      border 0
      width auto
      // border-bottom-left-radius 1em
      // border-bottom-right-radius 1em
      overflow hidden
      *
        width inherit
        padding 0
        margin 0
        border 0
        border-radius 0
      li.list-group-item
        height min-content
        list-style-type none
        // margin 4px
        background none
        display grid
        grid-template-columns 1.75em 1fr
        gap 4px
        &::before
          all: unset
        label.toggle-btn
          cursor pointer
          width stretch
          width -moz-available
          span
            padding 3px
        .button-container
          height 100%
          width 100%
          padding 0
          button.btn.roll-show[type='roll']
            display inline-block
            height 100% // 2px naturally, apparently
            width 100%
            &:hover
              transition 0.3s ease
              background #606060 !important
              color #fff
            &:before
              vertical-align middle


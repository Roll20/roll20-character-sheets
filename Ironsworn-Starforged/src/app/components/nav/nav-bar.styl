bottom-radius(dir, value)
  border-bottom-{dir}-radius  value

.nav-bar
  margin-top 0.3em
  border 1px solid #4C4D4F
  bottom-radius(left, 1em)
  bottom-radius(right, 1em)
  .nav-row
    display flex
    &:nth-last-child(1) 
      .nav-child
        &:nth-child(1)
          bottom-radius(left, 0.79em)
          label, .page-button
            bottom-radius(left, 0.5em)
          .page-button-back
            bottom-radius(left, 0.4em)
        &:nth-last-child(1)
          bottom-radius(right, 0.79em)
          label, .page-button
            bottom-radius(right, 0.5em)
          .page-button-back
            bottom-radius(right, 0.4em)

    .nav-child
      borderCommon()
      width 100%
      text-align-last center
      // &:nth-child(1)
      //   border-bottom-left-radius  0.79em
      // &:nth-last-child(1)
      //   border-bottom-right-radius 0.79em
      label
        margin 0
        padding 0
        cursor pointer
        &:hover
          background #ccc
          transition 0.5s ease

.page-button-back
  padding 0.1em 0em 0.1em 0em
  font-weight 600

.page-button
  &:checked
    & ~ div
      &.page-button-back
        background #4c4d4f
        color #fff
        transition 0.5s ease

.summary
  margin-top 1em

label.page-label
  text-align center

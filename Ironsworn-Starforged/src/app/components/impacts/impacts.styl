.impact-list
  display flex
  flex-flow row wrap
  justify-content space-evenly

.impact-component
  margin-top 1em
  display flex
  flex-flow wrap
  justify-content space-between
  // background #e8e9ec
  // clip-path polygon(-20% 100%, 6% 0%, 100% 0%, 100% 100%)

.impact-btn
  width 90%
  border-radius 1em
  input
    &:checked
     &~
      .btn-content
        border-radius 0.7em

.severity-track
  display flex
  margin-top 1em

.track-child
  width 100%
  .btn-content
    padding 0.4em 0.2em 0.2em 0.2em
    align-self center

ul.impact-body-list
  margin 0em 0.2em 0.3em 1.3em

p.severity-reduce,
p.impact-clear
  margin-bottom 0.3em

.impact-group
  width 23%
  border-radius 0.5em
  padding 0.3em

.impact-group-title
  text-align center
  text-transform: uppercase
  font-size 14px
  font-weight bold
  margin-bottom 0.3em

.custom-impacts
  margin-left 0.6em
  margin-bottom 2em
  margin-top 0.5em
  display flex
  .impact
    margin 0 0.5em
  .other-impacts-title
    width auto
    margin-right 0.6em
    align-self center
    text-align: center;
    text-transform: uppercase;
    font-size: 14px;
    font-weight: bold;
  input[type=text]
    border 0
    border-bottom 2px solid #4C4D4F
    border-radius 0
    padding 0
    background 0

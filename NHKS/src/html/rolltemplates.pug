rolltemplate(class="sheet-rolltemplate-skill")
    div(class="sheet-template-container")
        div(class="sheet-template-header")
            | {{name}}
        div(class="sheet-template-header")
            span(data-i18n="{{type}}")
            | {{role-name}}
        div(class="sheet-template-row")
            div(class="sheet-template-key")
                | {{skill}}
            div(class="sheet-template-value")
                | {{skillValue}}
        div(class="sheet-template-row")
            div(class="sheet-template-key")
                | {{attribute}}
            div(class="sheet-template-value")
                | {{attributeValue}}
        div(class="sheet-template-row")
            div(class="sheet-template-key")
                | {{modifier}}
            div(class="sheet-template-value")
                | {{modifierValue}}
        div(class="sheet-template-row")
            div(class="sheet-template-key")
                span(data-i18n="target-value")
            div(class="sheet-template-value")
                | {{computed::target}}
        div(class="sheet-template-row")
            div(class="sheet-template-key")
                span(data-i18n="roll")
            div(class="sheet-template-value")
                | {{roll1}}
        div(class="sheet-template-result")
            | {{computed::roll1}}


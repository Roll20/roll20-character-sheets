          span.sheet-attr-name(data-i18n='melee-defense')
          br
          span.sheet-attr-desc(data-i18n='melee-defense-desc')
          br
          input.sheet-no-arrows(type='number' name='attr_melee-defense' readonly='')
          br
          span.sheet-attr-name(data-i18n='melee-damage')

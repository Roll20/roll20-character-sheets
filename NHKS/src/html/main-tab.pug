          span.sheet-attr-desc(data-i18n='initiative-desc')
          br
          input.sheet-no-arrows(type='number' name='attr_initiative' readonly='')
        .sheet-input-line
          span.sheet-attr-name(data-i18n='famepoints')
          br
          input(type='number' name='attr_famepoints')
          br
          span.sheet-attr-name(data-i18n='awardpoints')

.sheet-main-tab
    .sheet-general
      div
        h1
          span(data-i18n='actor')
        span.sheet-input-line
          span.sheet-label(data-i18n='name')
          input(type='text' name='attr_character_name')
        span.sheet-input-line
          span.sheet-label(data-i18n='gender')
          input(type='text' name='attr_actor-gender')
        span.sheet-input-line
          span.sheet-label(data-i18n='age')
          input(type='text' name='attr_actor-age')
        span.sheet-input-line
          span.sheet-label(data-i18n='weight')
          input(type='text' name='attr_actor-weight')
        span.sheet-input-line
          span.sheet-label(data-i18n='size')
          input(type='text' name='attr_actor-size')
        span.sheet-input-line
          span.sheet-label(data-i18n='nationality')
          input(type='text' name='attr_actor-nationality')
        p
          span.sheet-label(data-i18n='stature')
          textarea(name='attr_actor-stature' value='')
        p
          span.sheet-label(data-i18n='description')
          textarea(name='attr_actor-description' value='')
      div
        h1
          span(data-i18n='role')
        span.sheet-input-line
          span.sheet-label(data-i18n='role-name')
          input(type='text' name='attr_role-name' value='')
        span.sheet-input-line
          span.sheet-label(data-i18n='role-type')
          select(name='attr_role-type')
            option(value='main' data-i18n='main-role' selected='selected')
            option(value='supporting' data-i18n='supporting-role')
        span.sheet-input-line
          span.sheet-label(data-i18n='movieplot')
          textarea(name='attr_movieplot' value='')
        span.sheet-input-line
          span.sheet-label(data-i18n='role-description')
          textarea(name='attr_role-description' value='')
        span.sheet-input-line.sheet-height-45
          span.sheet-label(data-i18n='role-inventory')
          textarea.sheet-textarea-big(name='attr_role-inventory' value='')
    h1
      span(data-i18n='attributes')
    .sheet-attributes
      .sheet-attributes-base
        .sheet-input-line
          span.sheet-label
            button(type='action' name='act_attribute-knowledge')
              span.sheet-attr-short(data-i18n='knowledge-short')
              br
              span.sheet-attr-full(data-i18n='knowledge')
          input.sheet-attribute-value(type='number' name='attr_knowledge')
        .sheet-input-line
          span.sheet-label
            button(type='action' name='act_attribute-strength')
              span.sheet-attr-short(data-i18n='strength-short')
              br
              span.sheet-attr-full(data-i18n='strength')
          input.sheet-attribute-value(type='number' name='attr_strength')
        .sheet-input-line
          span.sheet-label
            button(type='action' name='act_attribute-coolness')
              span.sheet-attr-short(data-i18n='coolness-short')
              br
              span.sheet-attr-full(data-i18n='coolness')
          input.sheet-attribute-value(type='number' name='attr_coolness')
        .sheet-input-line
          span.sheet-label
            button(type='action' name='act_attribute-stamina')
              span.sheet-attr-short(data-i18n='stamina-short')
              br
              span.sheet-attr-full(data-i18n='stamina')
          input.sheet-attribute-value(type='number' name='attr_stamina')
        .sheet-input-line
          span.sheet-label
            button(type='action' name='act_attribute-chi')
              span.sheet-attr-short(data-i18n='chi-short')
              br
              span.sheet-attr-full(data-i18n='chi')
          input.sheet-attribute-value(type='number' name='attr_chi')
        .sheet-input-line
          span.sheet-label
            button(type='action' name='act_attribute-dexterity')
              span.sheet-attr-short(data-i18n='dexterity-short')
              br
              span.sheet-attr-full(data-i18n='dexterity')
          input.sheet-attribute-value(type='number' name='attr_dexterity')
      .sheet-attributes-calc
        .sheet-input-line
          span.sheet-attr-name(data-i18n='hitpoints')
          br
          span.sheet-attr-desc(data-i18n='hitpoints-desc')
          br

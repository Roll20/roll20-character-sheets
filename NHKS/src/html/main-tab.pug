    .sheet-skills
      .sheet-skills-left

        include skill-list.pug

        div
          h1
            span(data-i18n='misc')
          textarea(name='attr_actor-misc' value='')
      .sheet-skills-right
        div
          h1
            span(data-i18n='advantages-and-disadvantages')
          fieldset.repeating_actor-advantages-disadvantages
            .sheet-actor-advantage
              input(type='text' name='attr_actor-advantage-name' value='')
              textarea(name='attr_actor-advantage-description' value='')
              span.sheet-label(data-i18n='is-role-advantage')
              input(type='checkbox' name='attr_actor-advantage-is-role-advantage' value='1')
        .sheet-martialarts
          h1
            span(data-i18n='martialarts')
          fieldset.repeating_actor-martialarts
            .sheet-martialarts
              input(type='text' name='attr_actor-martialarts-name' value='')
              .sheet-radio-set
                input.sheet-radiobox.sheet-reset(checked='checked' type='radio' name='attr_actor-martialarts-level' value='0')

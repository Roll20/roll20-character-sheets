mixin weapons()
    .weapons
        span Arme
        span(title="Impact") Imp.
        span(title="Portée") Por.
        span Attributs
        span(title="Munitions") Mun.
        span(title="Expert ?") Exp.
        span(title="Dommages de brûlure / corrosion ?") r
        span
        .unnarmed
            +textInput('unnarmed-name', 'Mains nues')(readonly)
            +numberInput('unnarmed-impact', 0)(readonly)
            +textInput('unnarmed-range', 'C')(readonly)
            +textInput('unnarmed-attributes', '-')(readonly)
            +numberInput('unnarmed-ammo', 0)(readonly)
            +cbButton('unnarmed-exp', ' ', 1)
            span
        fieldset.repeating_weapons
            +textInput('name')
            +numberInput('impact', 0)
            +textInput('range')
            +textInput('attributes')
            +numberInput('ammo', 0)
            +cbButton('exp', ' ', 1)
            +cbButton('burn', ' ', 1)
            +actButton('attack', '').roll.d10
        +hiddenInput('dmgString', '&{template:damage}{{roll=[[d8]]}}')
        +rollButton('damages', '@{dmgString}').hidden
    .options
      div(data-i18n-list="skills-list")
        for skill in globalAttributesByCategory.skills
          - const { name, ability } = skill;
          - const name_undercase = name.toLowerCase().replace(/ /g,"_");
          - const ability_short = ability.substring(0,3);
          .options__row(data-i18n-list-item=`${name_undercase}`)
            select.options__flex--4(name=`attr_${name_undercase}_type`)
              option(value="1" selected="selected" data-i18n="normal") Normal
              option(value="2" data-i18n="expertise") Expertise
            span.options__flex--5(data-i18n=`${name_undercase}-core`)
              | #{name} 
              span (#{ability_short})
            span.options__flex +
            input.options__flex--1(type="text" name=`attr_${name_undercase}_flat` value="0" placeholder="0" title=`@{${name_undercase}_flat}`)

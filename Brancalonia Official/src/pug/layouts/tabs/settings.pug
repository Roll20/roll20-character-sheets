        span(data-i18n="wisdom") Wisdom
        input.options__flex--1(type="checkbox" name="attr_cust_charisma_save_prof" value="(@{pb})")
        span(data-i18n="charisma") Charisma
      .options__row--title
        span(data-i18n="cust-class-opts") CUSTOM CLASS OPTIONS
    .options.spell_slot_mods
      .options__row
        each level in [1,2,3]
          .options__flex--2
            span(data-i18n="lvl-u") LEVEL
            span.options__flex=level 
          span.options__flex--1 +
          input.options__flex--1(type="text" name=`attr_lvl${level}_slots_mod` value="0" placeholder="0" title=`@{lvl${level}_slots_mod}`)

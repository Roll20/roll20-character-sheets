<!-- ### Roll Template Starts here -->
<rolltemplate class="sheet-rolltemplate-legacy">
  <div class="sheet-template-action">{{name}} rolls {{#roll_name}} {{roll_name}}{{/roll_name}}{{#roll_attr_mod}}({{roll_attr_mod}}){{/roll_attr_mod}}</div>
  <div class="sheet-template-result">
    {{#rollGreater() result 9}}
        <span class="result success">{{result}}</span>
        <span>Success!</span>
    {{/rollGreater() result 9}}
    {{#rollBetween() result 7 9}}
        <span class="result">{{result}}</span>
        <span>Partial Success</span>
    {{/rollBetween() result 7 9}}
    {{#rollLess() result 7}}
        <span class="result failure">{{result}}</span>
        <span>Miss</span>
    {{/rollLess() result 7}}
  </div>
  <!--<div>
    {{#allprops()}}
      <div>{{key}}</div><div>{{value}}</div>
    {{/allprops()}}
  </div>-->
</rolltemplate>
<!-- ### Roll Template End -->

<!-- ### Worker Scripts start -->
<script type="text/worker">
  on("change:skinname", function() {
    // console.log("Set SkinCheck = SkinName if not already equal.")
    getAttrs(["SkinName","SkinCheck"], function(values) {
      if (values.SkinCheck !== values.SkinName) {
        setAttrs({ SkinCheck: values.SkinName });
      };
    });
  // console.log("SkinCheck = SkinName whenever changed.");
  });
  </script>
<script type="text/worker">
  on("change:fskinname", function() {
    // console.log("Set fSkinCheck = fSkinName if not already equal.")
    getAttrs(["fSkinName","fSkinCheck"], function(values) {
      if (values.fSkinCheck !== values.fSkinName) {
        setAttrs({ fSkinCheck: values.fSkinName });
      };
    });
  // console.log("fSkinCheck = fSkinName whenever changed.");
  });
</script>
 <script type="text/worker">
  on("change:fskinname", function() {
    // console.log("Set fSkinCheck_box = fSkinName if not already equal.")
    getAttrs(["fSkinName","fSkinCheck_box"], function(values) {
      if (values.fSkinCheck_box !== values.fSkinName) {
        setAttrs({ fSkinCheck_box: values.fSkinName });
      };
    });
  // console.log("fSkinCheck_box = fSkinName whenever changed.");
  });
</script>

        <div class="sheet-Stats-Storyteller">
          <h2>Stats</h2>
          <div class="sheet-character-stat-block">
            <div class="sheet-character-stat-block-row">
              <div class="sheet-character-stat">
                <label>Force:</label> <input type="number" name="attr_Force" min="-1" max="3">
                <button type="roll" value="&{template:legacy} {{name=@{CharName}}} {{roll_name=Force}} {{roll_attr_mod=@{Force}}} {{result=[[?{Roll Type|Standard, 2d6|Advantage, 3d6kh2|Disadvantage, 3d6kl2}?{Modifiers|None, |+2, +2|+1, +1|-1, -1|-2, -2}+@{Force}]]}}" name="roll_Force"></button>
              </div>
              <div class="sheet-character-stat">
                <label>Lore:</label> <input type="number" name="attr_Lore" min="-1" max="3">
                <button type="roll" value="&{template:legacy} {{name=@{CharName}}} {{roll_name=Lore}} {{roll_attr_mod=@{Lore}}} {{result=[[?{Roll Type|Standard, 2d6|Advantage, 3d6kh2|Disadvantage, 3d6kl2}?{Modifiers|None, |+2, +2|+1, +1|-1, -1|-2, -2}+@{Lore}]]}}" name="roll_Lore"></button>
              </div>
            </div>
            <div class="sheet-character-stat-block-row">
              <div class="sheet-character-stat">
                <label>Steel:</label> <input type="number" name="attr_Steel" min="-1" max="3">
                <button type="roll" value="&{template:legacy} {{name=@{CharName}}} {{roll_name=Steel}} {{roll_attr_mod=@{Steel}}} {{result=[[?{Roll Type|Standard, 2d6|Advantage, 3d6kh2|Disadvantage, 3d6kl2}?{Modifiers|None, |+2, +2|+1, +1|-1, -1|-2, -2}+@{Steel}]]}}" name="roll_Steel"></button>
              </div>

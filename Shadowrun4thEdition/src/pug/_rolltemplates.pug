.rolltemplates
  rolltemplate.sheet-rolltemplate-rolls
    .sheet-template-container
      //- Display a header on the template -
      .sheet-template-header
        | {{#header}}
        h1 {{header}}
        | {{/header}}
        | {{#base}}
        span {{base}}
        | {{/base}}
        | {{#rollLess() wound 0}}
        span  ♦ 
        span(data-i18n="wounds")
        | {{/rollLess() wound 0}}
        | {{#rollLess() mod 0}}
        span  ♦ 
        span(data-i18n="modifier")
        | {{/rollLess() mod 0}}
        | {{#rollGreater() mod 0}}
        span  ♦ 
        span(data-i18n="modifier")
        | {{/rollGreater() mod 0}}
        | {{#rollGreater() edge 0}}
        span  ♦ 
        span(data-i18n="edge")
        | {{/rollGreater() edge 0}}
      //- Display the dice roll in the template -
      .sheet-template-body
        | {{#dice}}
        .sheet-template-row
          span.inlinerollresult {{dice}}
        | {{/dice}}
        //- Display a description. This is great for text included with a roll -
        | {{#desc}}
        .sheet-template-row
          span.sheet-template-desc 
            | {{desc}}
            | {{#rollGreater() rea 0}}
            span ,
            span(data-i18n="reach")
            | {{rea}}
            | {{/rollGreater() rea 0}}
            | {{#rollGreater() drain 1}}
            span ,
            span(data-i18n="drain")
            | {{drain}}
            | {{/rollGreater() drain 1}}
            | {{#rollLess() drain 1}}
            span ,
            span(data-i18n="drain-2")
            | {{drain}}
            | {{/rollLess() drain 1}}
        | {{/desc}}

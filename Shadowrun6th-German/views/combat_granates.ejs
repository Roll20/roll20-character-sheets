<fieldset class="repeating_granates">
    <input class="toggle-hide" name="attr_collapse_spelldetails" type="checkbox" value="1"/>
    <div class="flex-table collapseble">
        <div class="flexcontainer">
            <div class="flex--half">
                <label class="collapse">
                    <input class="toggle-hide" name="attr_collapse_spelldetails" type="checkbox" value="1"/>
                    <h4 class="invert" data-i18n-title="expandcollapse"><span ></span></h4>
                </label>
            </div>
            <div class="flex--4">
                
                <input class="spellname first last" type="text" name="attr_name" value="" />
            </div>
            <div class="flex--2">
                <span class="cyberberry-normal pd--right" data-i18n="type">Typ</span>
            </div>
            <div class="flex-center">
                <select class=" whitebackground first last" name="attr_type"  title="spells_type">
                    <option value="explosive_explosive" data-i18n="explosive_explosive" selected></option>
                    <option value="explosive_gas" data-i18n="explosive_gas"></option>
                    <option value="explosive_spray" data-i18n="explosive_spray"></option>
                </select>
            </div>
            <div class="flex--2">
                <span class="cyberberry-normal pd--right" data-i18n="range">Typ</span>
            </div>
            <div class="flex-center">
                <select class=" whitebackground first last" name="attr_distance">
                    <option value="-4" data-i18n="range_vclose_throw" selected></option>
                    <option value="-2" data-i18n="range_close_throw"></option>
                    <option value="0" data-i18n="range_medium_throw"></option>
                    <option value="2" data-i18n="range_long_throw"></option>
                    <option value="4" data-i18n="range_vlong_throw"></option>

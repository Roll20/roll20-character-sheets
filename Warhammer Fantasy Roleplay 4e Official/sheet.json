      "attribute": "npc",
      "displayname": "NPC",
      "displaytranslationkey": "settings_npc",
      "type": "checkbox",
      "value": "on",
      "description": "The NPC option sets new characters to default to the NPC card style sheet. Useful if the player characters have already been created and all new character sheets added to the game will likely represent non player characters.",
      "descriptiontranslationkey": "settings_npc_desc"
    },
    {
      "attribute": "setting_whisper",
      "displayname": "Whisper Rolls to GM",
      "displaytranslationkey": "settings_whisper",
      "type": "select",
      "options": [
        "Off|1",
        "On|0"
      ],
      "optiontranslationkeys": [
        "On",
        "Off"
      ],
      "default": "Off|1",
      "description": "All sheet rolls are sent to all players in chat by default. If enabled, rolls from this sheet will be visible only to the GM.",
      "descriptiontranslationkey": "settings_whisper_desc"
    },
    {
      "attribute": "setting_diff_option",
      "displayname": "Query Difficulty",
      "displaytranslationkey": "settings_difficulty",
      "type": "select",
      "options": [
        "On|0",
        "Off|1"
      ],
      "optiontranslationkeys": [
        "On",
        "Off"
      ],
      "default": "On",
      "description": "This will enable or disable the difficulty query window when rolls are made. When off, all rolls are made at the base target number.",
      "descriptiontranslationkey": "settings_difficulty_desc"
    },
    {
      "attribute": "setting_bonus_option",
      "displayname": "Query Bonuses",
      "displaytranslationkey": "settings_bonuses",
      "type": "select",
      "options": [
        "On|0",
        "Off|1"
      ],
      "optiontranslationkeys": [
        "On",
        "Off"
      ],
      "default": "On",
      "description": "This will enable or disable the additional bonus and SL bonus windows when rolls are made.",
      "descriptiontranslationkey": "settings_bonuses_desc"
    },
    {
      "attribute": "setting_crit_option",
      "displayname": "Automatic Success & Failure",
      "displaytranslationkey": "settings_auto",
      "type": "select",
      "options": [
        "Default|1",
        "01/96-100|2",
        "01/100|3"
      ],
      "optiontranslationkeys": [
        "Default"
      ],
      "default": "Default",
      "description": "This will change the boundaries for automatic success and failure on a roll. The default boundaries set the automatic success point at 01-05 and 96-100.",
      "descriptiontranslationkey": "settings_auto_desc"
    },
    {

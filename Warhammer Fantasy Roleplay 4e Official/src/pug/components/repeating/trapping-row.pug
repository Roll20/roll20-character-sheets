mixin trapping-row
    input(name=`attr_trappings_settings`, type="hidden", value=1)
    .wfrp-trappingtable__row

        .wfrp-trappingtable__cell--settingstoggle
            +display-toggle(`trappings_settings`, true)

        .wfrp-trappingtable__cell
            span(name=`attr_trappings_name`)

        .wfrp-trappingtable__cell
            input.wfrp-settings__input(name=`attr_trappings_amount`, type="number")

        .wfrp-trappingtable__cell--last
            input.wfrp-settings__input(name=`attr_trappings_enc`, type="number")
            
        .wfrp-trappingtable__row.wfrp-settings.control__hide--trappings_settings
        
            .wfrp-settings__row--span
                .wfrp-settings__label(data-i18n=`Name`) 
                input.wfrp-settings__input(name=`attr_trappings_name`, type="text")
        
            .wfrp-settings__row--span
                .wfrp-settings__label(data-i18n=`Modifiers`) 
                input.wfrp-settings__input(name=`attr_trappings_mods`, type="text")
        
            .wfrp-settings__row--span
                .wfrp-settings__label(data-i18n=`Traits`) 
                input.wfrp-settings__input(name=`attr_trappings_traits`, type="text")
        
            .wfrp-settings__row--span
                .wfrp-settings__label(data-i18n=`Type`) 
                select.wfrp-settings__select(name=`attr_trappings_type`)
                    option(data-i18n="Choose", value="0")
                    option(data-i18n="Ammunition", value="1")
                    option(data-i18n="Pack/Container", value="2")
                    option(data-i18n="Clothing/Accessory", value="3")
                    option(data-i18n="Tool/Kit", value="4")
                    option(data-i18n="Book/Document", value="5")
                    option(data-i18n="Trade Tool/Workshop", value="6")
                    option(data-i18n="Animal/Vehicle", value="7")
                    option(data-i18n="Drug/Poison", value="8")
                    option(data-i18n="Herb/Draught", value="9")
                    option(data-i18n="Prosthetic", value="10")
                    option(data-i18n="Miscellaneous", value="11")
        
            .wfrp-settings__row
                .wfrp-settings__label(data-i18n=`Count Enc.`) 
                input.wfrp-settings__input(name=`attr_trappings_inenc`, type="checkbox")
        
            .wfrp-settings__row
                .wfrp-settings__label(data-i18n=`Worn`) 
                input.wfrp-settings__input(name=`attr_trappings_worn`, type="checkbox")
                            
            .wfrp-settings__row--span
                .wfrp-settings__label--full(data-i18n=`Description`) 
                textarea.wfrp-settings__textarea(name=`attr_trappings_description`)
    
    


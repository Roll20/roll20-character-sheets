mixin psychology-row
    input(name=`attr_psychology_settings`, type="hidden", value=1)
    .wfrp-psychologytable__row

        .wfrp-psychologytable__cell--settingstoggle
            +display-toggle(`psychology_settings`, true)

        .wfrp-psychologytable__cell
            +trait-toggle(`psychology`, `attr_psychology_name`)
            |&nbsp;(
            span(name=`attr_psychology_target`)
            |)

        .wfrp-psychologytable__cell--vocalise
            button.wfrp-vocalise(type="roll", value=rolls.repeating.psychology) w
            
        input(name="attr_psychology_toggle", type="hidden")
        .wfrp-psychologytable__cell--description
            span(name=`attr_psychology_description`)
            
        .wfrp-psychologytable__row.wfrp-settings.control__hide--psychology_settings
        
            .wfrp-settings__row--span
                .wfrp-settings__label(data-i18n=`Name`) 
                input.wfrp-settings__input(name=`attr_psychology_name`, type="text")
        
            .wfrp-settings__row--span
                .wfrp-settings__label(data-i18n=`Target/Rating`) 
                input.wfrp-settings__input(name=`attr_psychology_target`, type="text")
        
            .wfrp-settings__row--span
                .wfrp-settings__label(data-i18n=`Modifiers`) 
                input.wfrp-settings__input(name=`attr_psychology_mods`, type="text") 
                            
            .wfrp-settings__row--span
                .wfrp-settings__label--full(data-i18n=`Description`) 
                textarea.wfrp-settings__textarea(name=`attr_psychology_description`, type="number", value=0)
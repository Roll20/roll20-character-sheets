.sheet-equipment
  std-font('Crimson Text')

.sheet-equipment-container
  display flex
  flex-flow row
  justify-content space-evenly
  border-bottom 1px solid #4C4D4F
  std-font('Crimson Text')
  input[type=text]
    width 100%
    border 0
    padding 0
    outline none
    &::placeholder
      color #7a7a7a
  .sheet-common-btn
    margin 0

.sheet-equipment-container-child
  width 15%
  display flex
  &.sheet-armor-column-4
    width 20%
  &.sheet-shield-column-1
    width 35%
  &.sheet-shield-column-2
    width 15%
  &.sheet-shield-column-3
    width 22%
  &.sheet-shield-column-4
    width 14%
  &.sheet-addon-column-1
    width 15%
  &.sheet-addon-column-2
    width 77.5%
  &.sheet-provision-column-1
    width 15%
  &.sheet-provision-column-2
    width 70%
  &.sheet-provision-column-3
    width 5%
  &.sheet-armor-column-1
    width 24%
  &.sheet-weapons-column-3
    width 40%

.sheet-equipment-title
  margin 0

.sheet-table-header
  border-bottom 2px solid #4C4D4F
  background #e1e1e1

label.sheet-equipment-table-btn
  border 0
  border-left 2px solid #4C4D4F
  border-right 2px solid #4C4D4F

div.sheet-equipment-table-btn
  font-size 12px
  padding 0.2em 0.1em 0.1em 0.1em
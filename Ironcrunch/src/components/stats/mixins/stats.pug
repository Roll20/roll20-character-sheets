- var stats = [{ lower: 'edge', upper: 'EDGE', capital: 'Edge', placeholder: 'grace' }, { lower: 'heart', upper: 'HEART', capital: 'Heart', placeholder: 'soul' }, { lower: 'iron', upper: 'IRON', capital: 'Iron', placeholder: 'body', }, { lower: 'shadow', upper: 'SHADOW', capital: 'Shadow', placeholder: 'guile' }, { lower: 'wits', upper: 'WITS', capital: 'Wits', placeholder: 'mind' }]

mixin statBuilder()
  each stat in stats
    div.sheet-stat
      h3.sheet-stats-title=stat.upper
      input(
        type='text'
        class='sheet-stats-input'
        name=`attr_${stat.lower}`
        value='1'
      )
      span(class='sheet-stats-max') MAX
      span(class='sheet-stats-max' name=`attr_max_${stat.lower}`)

mixin statStatic()
  each stat in stats
    div.sheet-stat
      label.sheet-roll-label
        h3.sheet-stats-title=stat.upper
        span(class='sheet-stats-input' name=`attr_${stat.lower}`)
        button(
        type='roll'
        class='sheet-hide'
        title=`Roll +${stat.capital}`
        name=`roll${stat.capital}`
        value=`&{template:ironcrunch_moves} {{header=@{character_name}}} {{name=Roll +${stat.lower}}} {{action=[[d12+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate1=[[1+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate2=[[2+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate3=[[3+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate4=[[4+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate5=[[5+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate6=[[6+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate7=[[7+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate8=[[8+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate9=[[9+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate10=[[10+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate11=[[11+@{${stat.lower}}+(?{Modifier|0})]]}} {{negate12=[[12+@{${stat.lower}}+(?{Modifier|0})]]}} {{challenge1=[[d20]]}} {{challenge2=[[d20]]}} {{momentum=[[@{momentum}]]}} {{modifiers=[[@{${stat.lower}}+(?{Modifier|0})]]}} {{add=[[(?{Modifier|0})]]}} {{stat=[[@{${stat.lower}}]]}} {{loadEncMin=[[@{max_load}+@{${stat.lower}}+(?{Modifier|0})]]}} {{loadEncMax=[[12+@{${stat.lower}}+(?{Modifier|0})]]}} {{encumbered=[[@{encumbered_enabled}]]}}`
      )
      
.debility-list
  display flex
  flex-flow row wrap
  justify-content space-evenly

.debility-component
  margin-top 1em
  display flex
  flex-flow wrap

.debility-btn
  width 40%

.severity-track
  display flex
  margin-top 1em

.track-child
  width 100%
  .btn-content
    padding 0.4em 0.2em 0.2em 0.2em
    align-self center

ul.debility-body-list
  margin 0em 0.2em 0.3em 1.3em

p.severity-reduce,
p.debility-clear
  margin-bottom 0.3em

.debility-group
  width 33.33%

.debility-group-title
  text-align center
  text-transform: uppercase
  font-size 14px
  font-weight bold
  margin-bottom 0.3em

.footer
  margin-top 1em

.momentum
  display flex

input[type=checkbox].momentum-burn:hover ~ div.momentum-burn-back
  background-color #ccc
  transition: .5s ease;

.momentum-box-input:hover ~ .momentum-box-back
  background: #ccc
  transition: .5s ease;

.momentum-box-input:checked ~ .momentum-box-back
  background: #4C4D4F
  color: white
  transition: .5s ease;

input[type=checkbox].momentum-burn
  opacity 0
  border 0

div.momentum-burn-back
  font-weight bold
  text-align center
  line-height 22px
  padding 0em 0.2em
  text-transform uppercase

label.momentum-burn
  borderCommon()
  padding 0
  cursor pointer
  margin 0
  font-size 1em

.momentum-box-input
  opacity 0
  border 0

.momentum-status-box
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  border-radius: 0%
  background: transparent
  border 2px solid #4c4d4f
  padding-left 0.2em

.momentum-status-value
  width auto
  font-size 1em

h3.momentum-max-box,
h3.momentum-reset-box
  display: inline
  padding-left: 1em

.momentum-box-value
  font-weight bold 
  font-size 16px
  color inherit

.momentum-input
  font-weight bold
  width 30px
  font-size 13px
  text-align center
  background transparent

.momentum-box
  cursor pointer
  borderCommon()
  padding 0
  margin 0

.momentum-dark
  color white
  border: 2px solid #4b4d4f
  background: #4b4d4f
  width: 100%

.momentum-max,
.momentum-reset
  line-height 1.4em
  font-size 1em

.momentum-title
  color white
  line-height 1.2em
  font-size 1.2em


.momentum-header
  height 20px

.sub-header-static
  margin-top 0.2em

.momentum-status-attr
  padding 0em 0.2em

include ./tracks
.sub-header-static
  .momentum.momentum-header
    .momentum.momentum-dark
      h3.momentum-title(data-i18n='resource-momentum')=locals.translations['resource-momentum']

  .momentum
    each object in momentumPositiveTrack 
      label.momentum-box
        if object.checked
          input(
          type='radio'
          name='attr_momentum'
          class='momentum-box-input hide-element'
          value=object.value
          checked
        )
        else
          input(
            type='radio'
            name='attr_momentum'
            class='momentum-box-input hide-element'
            value=object.value
          )
        .momentum-box-back
          h3.momentum-box-value=object.text

    label.momentum-burn
      input(type='checkbox' class='momentum-burn hide-element' title='Burn Momentum' name='attr_momentumBurn')
      .momentum-burn-back(data-i18n='resource-momentum-burn')=locals.translations['resource-momentum-burn']
    
    .momentum-status-box
      h3.momentum-max(data-i18n='resource-momentum-max')=locals.translations['resource-momentum-max']
      h3.momentum-status-value
        span.momentum-status-attr(name='attr_momentum_max')
      input(type='text' class='hide-element' name='attr_momentum_max' value='10')

    .momentum-status-box
      h3.momentum-reset(data-i18n='resource-momentum-reset')=locals.translations[`resource-momentum-reset`]
      h3.momentum-status-value
        span.momentum-status-attr(name='attr_momentum_reset')
      input(type='text' class='hide-element' name='attr_momentum_reset' value='2')
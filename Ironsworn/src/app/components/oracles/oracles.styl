.oracle-container
  display flex
  opacity 1
  std-font()
  font-size 1em
  font-weight bold
  justify-content space-between
  margin-top 1em
  padding 0.1em

.oracle-column
  display flex
  flex-direction column

.oracle-sub-column
  width 50%

.oracle-roll
  width auto
  height auto

.theme-outline
  border: 1px solid #4C4D4F

span.oracle-result
  width 80%
  font-size 13px

.oracle-box
  borderCommon()
  box-sizing: border-box
  width: 100%

.oracle-box:nth-child(n+2)
  margin-top: 10px

.oracle-title
  background-color: #4C4D4F
  color: #fff
  border-bottom: 1px solid #4C4D4F
  font-size: 1.4em
  font-weight: bold
  padding-left: 5px
  padding-right: 5px
  text-transform: uppercase

.oracle-table-preview
  width: auto

.oracle-show
  display inline-flex
  font-size 1em
  margin 0em
  padding 0.3em

.oracle-show:hover
  background #969696
  cursor pointer
  transition .5s ease

.oracle-table
  border 2px solid #4C4D4F

.flex-table
  display flex

.oracle-row:nth-child(2n+1),
.oracle:nth-child(2n+1)

.stats
  justify-content space-evenly
  align-items center
  border-radius 0%
  margin-bottom 1em

.stat
  display flex
  flex-direction column
  justify-content center
  align-items center

.stat-title
  min-width 100px
  max-width 130px
  overflow hidden

.stat-input
  font-weight bold
  width 60px
  line-height 40px
  font-size 28px
  text-align center
  height 50px !important
  border-radius 0

input
  &.stats-input
    borderCommon()
    background #e6e7e8
    &:focus
      outline 3px solid #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px

label
  &.roll-label
    margin 0
    padding 0em 0.4em 0em 0.4em
    width auto
    borderCommon()
    cursor pointer
    text-align center
    line-height 1.4em
    &:hover
      background #ccc
      transition 0.5s ease
  &.stat-toggle
    text-transform uppercase
    margin 0
    padding 0
    borderCommon()
    text-align center
    cursor pointer
    &:hover
      background #ccc
      transition 0.5s ease

input[type=radio].stat-set
  &:checked
    & ~ div
      &.stat-set
        show-hide()
        display flex
        justify-content space-between
        align-items center
        gap 1em
        width auto
        padding 1em 0 1em 0

input[type=radio].stat-edit
  &:checked
    & ~ div
      &.stat-edit
        show-hide()
        display flex
        justify-content space-between
        align-items center
        gap 1em
        width auto
        padding 1em 0 1em 0

div
  &.stat-toggle
    &.set-toggle
      width 100%
    &.edit-toggle
      transform rotate(90deg)
      min-width 65px
      height 0

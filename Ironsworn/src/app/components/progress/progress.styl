.progress-header
  display flex
  justify-content space-around
  align-items center
  margin-top 0.3em

.progress-container
  display flex
  flex-direction column
  justify-content center
  align-items center

.progress-name
  width 100%
  font-weight bold
  font-size 14px

input
  &.progress-name
    background #e6e7e8
    border 2px solid #494a4c
    border-radius 0
    margin-bottom 0.2em

.progress-input
  width 40px
  height 40px
  font-size 22px
  font-weight bold
  background transparent
  text-align center
  justify-content center
  align-items center
  padding 2px 0px 0px 12px
  margin 0px
  cursor pointer
  borderCommon()
  border-radius 0
  &:hover
    background-color #ccc
    transition 0.5s ease
  &:focus
    outline 3px solid #fd0
    outline-offset 0
    box-shadow inset 0 0 0 2px

/* button to control display of countdown boxes */

.progress-holder
  display flex
    
input.progress-name
  margin-bottom 0px

.challenge-show
  padding 0
  margin 0
  borderCommon()
  width auto
  height auto
  cursor pointer
  border-left 0
  &:hover
    background #ccc
    transition 0.5s ease

.challenge-show-back
  height 100%
  padding 0em 1em 0em 1em
  line-height 25px

input[type='checkbox'].challenge-show:checked ~ div.challenge-row
  show-hide(0.7s)

input[type='checkbox'].challenge-show-button:checked ~ div.challenge-show-back
  background #4c4d4f
  color white

/* grid container to hold challenge boxes and countdown boxes */

.challenge-row, .progress-row
  display grid
  grid-template-columns 1fr repeat(10, 43.5px) 1fr
  align-items center
  .btn
    text-transform uppercase
  
/* Individual boxes */

label.challenge-label
  padding-left 0.5em
  display block
  height 18px
  margin 0px
  text-transform uppercase

.challenge-box
  borderCommon()
  padding 0
  display inline-flex
  height 36px
  width 36px
  margin 0.2em 0em
  cursor pointer
  
.challenge-fill
  height 100%
  width 100%
  background white

input[type="checkbox"].challenge:checked ~ .challenge-fill
  background #4c4d4f

input[type="checkbox"].challenge:hover ~ .challenge-fill
  background #E6E7E8

.blank-index
  display: inline-block
  height: 40px
  width: 40px


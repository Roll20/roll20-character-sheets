//-
  Generates a repeating fieldset for bonds.
  Expands when clicking the DETAILS label.

  @mixin
  @outputs repeating html fieldset

  @memberof components/bonds

mixin bonds()
  .bond-component
    fieldset.repeating_bonds
      .bond-container
        p.bond-title(data-i18n='bond-name')!=locals.translations['bond-name']
        input.border-bottom.bond-name(type='text' name='attr_bond-name' placeholder=locals.translations['bond-name'] data-i18n-placeholder='bond-name')
        label.btn.details-btn
          input.hide-element.btn-input(type='checkbox' name='attr_details_button')
          .btn-content(data-i18n='bond-details')!=locals.translations['bond-details']
        
        input.hide-element.show-bond-info(type='checkbox' name='attr_details')
        .show-bond-info.showhide
          .full-width
            p.bond-title(data-i18n='bond-location')!=locals.translations['bond-location']
            input.bond-location.border-bottom(type='text' name='attr_bond-location' placeholder=locals.translations['bond-location'] data-i18n-placeholder='bond-location')
          .full-width
            p.bond-title(data-i18n='bond-descriptors')!=locals.translations['bond-descriptors']
            input.bond-descriptors.border-bottom(type='text' name='attr_bond-descriptors' placeholder=locals.translations['bond-descriptors'] data-i18n-placeholder='bond-descriptors')
          .full-width
            textarea.bond-notes(name='attr_bond-notes')

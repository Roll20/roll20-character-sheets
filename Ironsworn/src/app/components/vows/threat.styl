.threat-header
  display flex

input
  &.vow-threat
    background #e6e7e8
    border 2px solid #494a4c
    border-radius 0
    width 100%
    &:focus
      outline 3px solid #fd0
      outline-offset 0
      box-shadow inset 0 0 0 2px

.menace-row
  margin 0em 0em 0.4em 0em
  justify-content space-evenly
  display flex
  border 2px solid #4c4d4f
  background #a1a1a1
  border-top 0
  padding 0.1em 0em

.menace-box
  border 2px solid black
  padding 0
  display inline-flex
  height 1em
  width 4em
  margin 0.2em 0em
  cursor pointer

.menace-show
  padding 0
  margin 0
  border 2px solid #4c4d4f
  width auto
  height auto
  cursor pointer
  border-left 0
  &:hover
    background #ccc
    transition 0.5s ease

input[type='checkbox'].menace-show:checked ~ div.menace-row
  show-hide(0.7s)

input[type='checkbox'].menace-show-button:checked ~ div.menace-show-back
  background #4c4d4f
  color white

.menace-vow
  opacity 0
  cursor pointer
  vertical-align top

.vow-menace-label
  font-weight bold
  font-size 12px

.menace-fill
  height 100%
  width 100%
  background white

.menace-show-back
  height 100%
  padding 0em 1em 0em 1em
  line-height 25px

input[type="checkbox"].menace-vow:checked ~ .menace-fill
  background #4c4d4f

input[type="checkbox"].menace-vow:hover ~ .menace-fill
  background #E6E7E8

input.optional-vow-threat:checked ~ div.optional-vow-threat
  show-hide(0.3s)

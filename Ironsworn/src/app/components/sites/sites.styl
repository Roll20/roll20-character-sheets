.site-container {
  border: 2px solid #4C4D4F;
  border-radius: 0em;
  margin-bottom: 1em;
  padding: 1em;
}
.site-notes {
  width: 97.5% !important;
  height: 156px !important;
  resize: none;
  margin-left: 3px;
  border-radius: 0;
}
.site-notes:focus {
  outline: 3px solid #fd0;
  outline-offset: 0;
  box-shadow: inset 0 0 0 2px;
}
.site-name,
.site-location,
.site-descriptors {
  border: none;
  border-radius: 0em;
  background: transparent;
  padding: 0;
  padding-left: 0.5em;
  std-font()
  font-weight: bold;
  color: #4c4d4f !important;
}
.site-descriptors {
  width: 43%;
}
.site-location {
  width: 40%;
}
p.site-title {
  text-align: left;
  std-font()
  font-weight: bold;
  font-size: 16px;
  margin: 0 0 0px;
  padding: 0.1em 0.2em 0.08em 0.2em;
  text-transform: uppercase;
  vertical-align: bottom;
  display: inline;
  color: #4c4d4f  !important;
  border-radius: 0;
}
.site-name::placeholder,
.site-location::placeholder,
.site-descriptors::placeholder {
  color: #8a8a8a  !important;
}
.site-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1em;
}
.site-column {
  flex-direction: row;
  width: 48%;
  padding: 0.5em 0em 0.5em 0.7em;
}
.denizen-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5em;
}
.denizen-column {
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 22%;
  padding: 0.5em 0em 0.5em 0em;
}
.denizen-option-column {
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 22%;
  padding: 0.5em 0.5em 0.5em 0.5em;
}
.denizen-option {
  font-size: 12px;
}
.site-progress-header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 10px;
}
.denizen-operand-column {
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 2%;
  padding: 0.5em 0.5em 0.5em 0.5em;
}
p.denizen-title {
  text-align: left;
  std-font()
  font-weight: bold;
  font-size: 12px;
  margin: 0 0 0px;
  text-transform: uppercase;
  vertical-align: bottom;
  display: inline;
  color: #4c4d4f  !important;
}
.denizen-input {
  border: none;
  border-radius: 0em;
  background: transparent;
  padding: 0.5em;
  width: 96%;
  margin-left: 3px;
}
.denizen-input:focus {
  outline: 3px solid #fd0;
  outline-offset: 0;
  box-shadow: inset 0 0 0 2px;
}
.denizen-operand {
  font-weight: bold;
}
.denizen-background,
.site-background {
  background: #dedddc;
}
h3.site-divide::after,
h3.site-divide::before {
  display: inline-block;
  content: "";
  height: 5px;
  border-top: 2px solid #4c4d4f;
  top: 0;
  width: 331px;
}
h3.site-denizens-divide::after,
h3.site-denizens-divide::before {
  display: inline-block;
  content: "";
  height: 5px;
  border-top: 2px solid #4c4d4f;
  top: 0;
  width: 336px;
}
h3.site-divide-notes::after,
h3.site-divide-notes::before {
  display: inline-block;
  content: "";
  height: 5px;
  border-top: 2px solid #4c4d4f;
  top: 0;
  width: 352px;
}
.sites-container {
  margin-top: 1em;
}
label.site-details {
  display: flex;
  justify-content: center;
  width: 48.7%;
  margin: 0;
  padding: 0;
  height: auto;
  border-radius: 0em;
}
.site-details-content {
  width: 100%;
  padding: 0.2em;
  text-align: center;
  border-radius: 0em;
}
.site-details-button:checked ~ .site-details-content {
  background: #4c4d4f;
  color: #fff;
  transition: 0.5s ease;
}
.show-theme-domains,
.show-site-info {
  margin-top: 0.5em;
  transition: all 0.7s !important;
}
.show-theme-domains {
  justify-content: space-between;
}
input[type="checkbox"].show-site-info:checked ~ div.show-site-info,
input[type="checkbox"].show-theme-domains:checked ~ div.show-theme-domains {
  flex-flow: column;
  visibility: visible;
  transition: all 0.7s !important;
  height: 640px;
  opacity: 1;
}
div.show-theme-domains {
  display: flex;
  flex-flow: row !important;
}
h3.site-divide-notes {
  margin-bottom: 0.5em;
}
input.site-name {
  width: 70%;
  padding: 2px;
}
input.site-name:focus {
  outline: 3px solid #fd0;
  outline-offset: 0;
  box-shadow: inset 0 0 0 2px;
}
.site-card-container {
  display: flex;
  std-font('Crimson Text')
  font-size: 1em;
  padding: 1em;
}
.domain-cards,
.theme-cards {
  border: 2px solid #4c4d4f;
  border-radius: 1em;
}
.domain-header,
.theme-header {
  margin-top: 0.7em;
}
.domain-column,
.theme-column {
  width: 100%;
}
.card-column {
  width: 48.7%;
}
.site-details-bar {
  display: flex;
  justify-content: space-between;
}
input[type='radio'].theme-cards:checked ~ div.theme-cards,
input[type='radio'].domain-cards:checked ~ div.domain-cards,
input[type='radio'].custom-cards:checked ~ div.custom-cards {
  show-hide(0.7s)
}
input[type='radio'].ancient:checked ~ div.ancient,
input[type='radio'].corrupted:checked ~ div.corrupted,
input[type='radio'].fortified:checked ~ div.fortified,
input[type='radio'].hallowed:checked ~ div.hallowed,
input[type='radio'].haunted:checked ~ div.haunted,
input[type='radio'].infested:checked ~ div.infested,
input[type='radio'].ravaged:checked ~ div.ravaged,
input[type='radio'].wild:checked ~ div.wild,
input[type='radio'].barrow:checked ~ div.barrow,
input[type='radio'].cavern:checked ~ div.cavern,
input[type='radio'].frozen-cavern:checked ~ div.frozen-cavern,
input[type='radio'].ice-reach:checked ~ div.ice-reach,
input[type='radio'].mine:checked ~ div.mine,
input[type='radio'].pass:checked ~ div.pass,
input[type='radio'].ruin:checked ~ div.ruin,
input[type='radio'].sea-cave:checked ~ div.sea-cave,
input[type='radio'].shadowfen:checked ~ div.shadowfen,
input[type='radio'].stronghold:checked ~ div.stronghold,
input[type='radio'].tanglewood:checked ~ div.tanglewood,
input[type='radio'].underkeep:checked ~ div.underkeep {
  show-hide(0.7s)
}
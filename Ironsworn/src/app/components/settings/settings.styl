/* The switch - the box around the slider */
.setting-switch
  position: relative
  display: inline-block
  width: 55px
  height: 28px
  padding: 0

.setting-switch input
  opacity: 0
  width: 0
  height: 0

/* The slider */
.setting-slider
  position: absolute
  cursor: pointer
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: #ccc
  -webkit-transition: .4s
  transition: .4s

.setting-slider:before
  position: absolute
  content: ""
  height: 20px
  width: 20px
  left: 4px
  bottom: 4px
  background-color: white
  -webkit-transition: .4s
  transition: .4s

input:checked + .setting-slider
  background-color: #4c4d4f

input:focus + .setting-slider
  box-shadow: 0 0 1px #4c4d4f

input:checked + .setting-slider:before
  -webkit-transform: translateX(26px)
  -ms-transform: translateX(26px)
  transform: translateX(26px)

/* Rounded sliders */
.setting-slider.setting-round
  border-radius: 34px

.setting-slider.setting-round:before
  border-radius: 50%

.settings-group
  display flex
  gap 70px
  margin-top 1em

.settings-group-title
  align-self center
  font-size 1.2em
  font-weight bold
  text-transform uppercase

.setting-name
  text-align center
  font-weight 600

mixin delveTable
  .move-table.move-delve-table
    .move-delve-row-header
      .move-delve-column-stat-header-1 Edge
      .move-delve-column-stat-header-2 Shadow
      .move-delve-column-stat-header-3 Wits
      .move-delve-column-header Weak Hit Result 
    .oracle-row
      .move-delve-stat-column-1 1-45
      .move-delve-stat-column-2 1-30
      .move-delve-stat-column-3 1-40
      .move-delve-column Mark progress and <em>Reveal a Danger.</em>
    .oracle-row
      .move-delve-stat-column-1 46-65
      .move-delve-stat-column-2 31-65
      .move-delve-stat-column-3 41-55
      .move-delve-column Mark progress.
    .oracle-row 
      .move-delve-stat-column-1 66-75
      .move-delve-stat-column-2 66-90
      .move-delve-stat-column-3 56-80
      .move-delve-column Choose one: Mark progress or <em>Find an Opportunity.</em>
    .oracle-row 
      .move-delve-stat-column-1 76-80
      .move-delve-stat-column-2 91-99
      .move-delve-stat-column-3 81-99
      .move-delve-column Take both: Mark progress and <em>Find an Opportunity.</em>
    .oracle-row 
      .move-delve-stat-column-1 81-100
      .move-delve-stat-column-2 100
      .move-delve-stat-column-3 100
      .move-delve-column Mark progress twice and <em>Reveal a Danger.</em>
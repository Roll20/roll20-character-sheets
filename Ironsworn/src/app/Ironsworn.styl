// Fonts
@css {
  @import url('https://fonts.googleapis.com/css?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900|Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700|Roboto&display=swap');
}

// Common
@import './common/stylus/shared'

// Sheet Core
.charsheet
  width 842px !important
  margin 0 auto !important
  padding 15px
  std-font()
  font-weight normal
  input[type=text]
    font-weight: 600;
    &:focus
      input-highlight(3px)
  select
    -webkit-appearance: none
    -moz-appearance: none
    text-indent: 1px
    text-overflow: ''
    &::-ms-expand
      display: none
  li
    font-weight normal
    font-size 14.3px
  p
    std-font('Crimson Text')
    font-size 14.3px
    line-height 1.25
    font-weight normal
    margin 0
  h1
    font-weight: bold
    width: 100%
    font-size: 28px
    text-align: center
    margin: 0 0 0px
    padding: 10
    text-transform: uppercase
  h2
    font-weight: bold
    width: 100%
    font-size: 18px
    text-align: left
    margin: 0 0 0px
    padding: 0
    text-transform: uppercase
  h3
    font-weight: bold
    width: 100%
    line-height 1.4em
    font-size 1.2em
    text-align: center
    margin: 0 0 0px
    padding: 0
    text-transform: uppercase
    &.divide
      &::after,
      &::before
        display: inline-block
        content: ""
        height: 5px
        border-top: 2px solid #4C4D4F
        top: 0
        width: 220px
    &.site-divide
      &::after,
      &::before
        display: inline-block
        content: ""
        height: 5px
        border-top: 2px solid #4C4D4F
        top: 0
        width: 331px
    &.site-denizens-divide
      &::after,
      &::before
        display: inline-block
        content: ""
        height: 5px
        border-top: 2px solid #4C4D4F
        top: 0
        width: 336px
    &.site-divide-notes
      &::after,
      &::before
        display: inline-block
        content: ""
        height: 5px
        border-top: 2px solid #4C4D4F
        top: 0
        width: 352px

  .divide
    margin-top 1em
  h4
    font-weight: bold
    width: 100%
    font-size: 16px
    text-align: center
    margin: 0 0 0px
    padding: 0
    text-transform: uppercase
    &.tab-title
      display: inline-block
  h5
    font-weight: bold
    font-size: 12px
    text-align: left
    margin: 0 0 0px
    padding: 0
    text-transform: uppercase
  h6
    font-size: 14px
    font-weight: bold
    text-align: left
    margin-top: 2px
  button[type="roll"]
    align-items: left
    color: #4C4D4F !important
    font-weight: normal
    font-size: 20px
    text-decoration: none
    background: none
    background-image: none
    border: none
    box-shadow: none
    text-shadow: none
    padding: 0px 0px 0px 0px
    margin: 0px 0px 0px 0px
    text-align: center
    &:hover
      transition: .5s ease

  .heading-left
    text-align: left

  hr
    border: 0
    height: 1px
    background #ccc
    background-image: linear-gradient(to right, #ccc, #333, #ccc)

  textarea
    std-font('Crimson Text')
    max-width 828px
    border: 2px solid #4C4D4F
    font-weight normal

  .btn
    display: inline
    width: 100%
    font-weight: bold
    font-size: 14px
    padding 0
    margin 0.5em
    height 40px
    padding 0.2em 0.2em 0.2em 0.2em
    border: 2px solid #494a4c
    border-radius 0
    cursor: pointer

  .common-btn
    btn()
    &:hover
      background #ccc
      transition .5s ease

  .btn-content
    padding 0.2em 0.2em 0.2em 0.2em
    width 100%
    text-align center

  .btn-input
    &:checked
      & ~ .btn-content
        background #4c4d4f
        color #fff

  button.btn.repcontrol_edit,
  button.btn.repcontrol_add
    width auto
    height auto
    border 2px solid #4C4D4F
    border-radius 0
    font-weight bold
    font-size 12px
    text-shadow none
    text-transform uppercase
    padding 0.2em
    margin 0.3em
    color #4C4D4F !important
    std-font()
    background #dfe0e2
    &:hover
      background #bcbec2
    &:focus
      input-highlight(1px)

  button.btn.repcontrol_edit
    margin-right 3px

  button.btn.repcontrol_add
    margin-left 3px

  .debilities
    margin-bottom: 0px

  .debility
    display: flex
    flex-flow: row wrap

  .flex-container
    display flex
    align-items flex-start

  .flex-wrapper
    display flex
    flex-direction column
    margin-bottom 10px
    font-weight normal
    padding 0.5em

  .track-box-input
    width: 80px
    height: 45px !important
    opacity: 0
    vertical-align: top

  .track-box-back
    width: 80px
    height: 45px
    margin-top: -45px

  .resources-box-input
    width: 80px
    height: 40px !important
    opacity: 0
    vertical-align: top

  .resources-box-back
    width: 80px
    height: 40px
    margin-top: -40px

  .track-box-input:hover ~ .track-box-back,
  .resources-box-input:hover ~ .resources-box-back
    background: #ccc
    transition: .5s ease;

  .track-box-input:checked ~ .track-box-back,
  .resources-box-input:checked ~ .resources-box-back
    background: #4C4D4F
    color: white
    transition: .5s ease;

  .track-box-value
    padding: 0px
    font-weight: bold
    height: 35px
    padding-top: 10px
    font-size: 18px
    color: inherit

  .resources-box-value
    padding: 0px
    font-weight: bold
    height: 35px
    padding-top: 10px
    font-size: 18px
    color: inherit

  .resources-title-box
    width: 80px
    height: 40px
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    border-radius: 0%
    background: transparent
    border: 2px solid #4C4D4F
    margin-top: 20px
    margin-bottom: 2px

  .resources-box
    width: 80px
    height: 40px
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    border-radius: 0%
    background: transparent
    border: 2px solid #4C4D4F
    margin-bottom: 2px

  .pc-name
    width: 100%
    font-weight: bold
    font-size: 14px
    border: 2px solid #4C4D4F
    background: #E6E7E8
    color: #4C4D4F !important
    border-radius: 0

  .debil-desc
    width: 100%
    font-weight: bold
    font-size: 14px

  .border
    border: 1px solid #ccc
    border-radius: 4px

  textarea.full-width
    width: 95%
    resize: vertical

  input.filler[type="radio"],
  input[type="checkbox"].checkbox
    opacity: 0
    width: 16px
    height: 16px
    position: relative
    top: 5px
    left: 6px
    margin: -10px
    cursor: pointer
    z-index: 1

  /* Fake radio/checkbox */
  input[type="radio"] + span::before,
  input[type="checkbox"].checkbox + span::before
    margin-right: 4px
    border: solid 1px #a8a8a8
    line-height: 14px
    text-align: center
    display: inline-block
    vertical-align: middle
    -moz-box-shadow: 0 0 2px #ccc
    -webkit-box-shadow: 0 0 2px #ccc
    box-shadow: 0 0 2px #ccc
    background: #f6f6f6
    background: -moz-radial-gradient(#f6f6f6, #dfdfdf)
    background: -webkit-radial-gradient(#f6f6f6, #dfdfdf)
    background: -ms-radial-gradient(#f6f6f6, #dfdfdf)
    background: -o-radial-gradient(#f6f6f6, #dfdfdf)
    background: radial-gradient(#f6f6f6, #dfdfdf)

  input[type="checkbox"].checkbox + span::before,
  input.filler[type="radio"] + span::before
    content: ""
    width: 14px
    height: 14px
    font-size: 12px
    -moz-border-radius: 3px
    -webkit-border-radius: 3px
    border-radius: 3px

  input[type="checkbox"].checkbox:checked + span::before
    content: "■"

  input.zeroxp[type="radio"] + span::before
    content: "0" !important

  input.filler[type="radio"] + span::before
    content: "■"

  /* Remove dot from all radios _after_ selected one */
  input.filler[type="radio"]:checked ~ input.filler[type="radio"] + span::before
    content: ""

  span.showhide:checked
    background-color: #4C4D4F
    color: white
    transition: .5s ease;

  span.showhide
    display: inline
    border: 1px solid #ccc
    margin-right: 11px
    border-radius: 4px
    padding: 2px 4px
    font-weight: bold
    font-size: 14px

  span.showhide:hover
    cursor: pointer
    border-radius: 4px
    padding: 2px 4px
    background-color: #ccc
    color: #4C4D4F  !important
    transition: .5s ease;

  div.showhide
    hide()

  .hide-element
    display none

  input[type='checkbox'].hide-element
    display none
  
  input[type='radio'].hide-element
    display none

  div.hide-element
    display none

  div.preview-roll
    padding: 0em

  input.show-hide:checked ~ div.show-hide
    show-hide()

  span.preview-roll
    width: 30%
    margin-left: 1em

  .button-container
    width: 2.5em
    border: 2px solid #4C4D4F

  .button-container-preview
    width: 2.4em

  .no-border
    border: 0

  .requirement-area
    height: auto
    margin-bottom: 5px

  input.border-bottom
    border-bottom: 1px solid #4C4D4F
    border-radius: 0em

  .full-width
    width: 100%
    margin-top: 0.3em

  // Pages
  @import './pages/index'

  // Components
  @import './components/resources/resources'
  @import './components/misses/misses'
  @import './components/debilities/debilities'
  @import './components/bonds/bonds'
  @import './components/vows/vows'
  @import './components/vows/threat'
  @import './components/progress/progress'
  @import './components/nav/nav-bar'
  @import './components/momentum/momentum'
  @import './components/stats/stats'
  @import './components/settings/settings'
  @import './components/notes/notes'
  @import './components/moves/moves'
  @import './components/sites/sites'
  @import './components/assets/assets'
  @import './components/oracles/oracles'

.ui-dialog .charsheet .repcontainer .repitem .itemcontrol 
  .repcontrol_del
    float right
    width auto
    margin 0
    height auto
  .repcontrol_move
    cursor move
    width auto
    margin 0
    height auto

// Roll Templates
@import './roll-templates/template'
@import './legacy/roll-templates'
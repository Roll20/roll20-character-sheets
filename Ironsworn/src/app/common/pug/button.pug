mixin btn(opts)
  if opts.classes
    label(class=`common-btn ${opts.classes}`)
      if opts.pure_attr
        input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}`)
      else
        if opts.checked
          input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}_button` checked)
        else
          input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}_button`)
      .btn-content(data-i18n=opts.translationId)=opts.text
  else
    label.common-btn
      input.btn-input.hide-element(type=opts.type name=`attr_${opts.attribute}_button`)
      .btn-content(data-i18n=opts.translationId)=opts.text
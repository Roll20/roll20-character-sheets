.changelog
  border 2px solid #4C4D4F
  margin-bottom 1em
  padding 1em

.center
  text-align center

.close-changelog
  border 2px solid #4C4D4F
  cursor pointer
  padding 0
  margin 0.5em 0 0 0
  text-align: center
  &:hover
    background #ccc
    transition .5s ease

input.changelog:checked + div.changelog,
input.changelog-entry:checked + div.changelog-entry
  display none

.modes
  display flex
  justify-content space-evenly

h2.mode-title
  text-align center

div.mode-title
  margin-bottom 2em

label.mode
  text-align center

label.mode
  margin 0.5em
  padding 0
  cursor pointer
  box-shadow: 1px 1px 19px 6px rgba(0,0,0,0.15);
  opacity 1
  z-index 5
  width: auto;
  &:hover
    h4
      color #797979  !important
      transition: .5s ease;
    .mode-image
      opacity 0.7
      transition: .5s ease;
  h4
    margin-bottom 0.5em
    margin-top 0.5em

input[type=radio].character-mode:checked ~ div.character-mode,
input[type=radio].shared-mode:checked ~ div.shared-mode
  display block

input[type=checkbox].modes-show:checked ~ div.modes-show
  display block

div.mode
  display: flex
  justify-content: center
  width fit-content
  width -moz-fit-content
  margin 0

.mode-image
  display flex

input[type=radio].bonds:checked ~ div.bonds,
input[type=radio].summary:checked ~ div.summary,
input[type=radio].vows:checked ~ div.vows,
input[type=radio].assets:checked ~ div.assets,
input[type=radio].moves:checked ~ div.moves,
input[type=radio].progress-page:checked ~ div.progress-page,
input[type=radio].oracles:checked ~ div.oracles,
input[type=radio].settings:checked ~ div.settings,
input[type=radio].sites:checked ~ div.sites
  display block
  show-hide()

.sub-header
  margin-top 1em
  border-bottom 3px solid #4C4D4F

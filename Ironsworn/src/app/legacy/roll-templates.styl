  background-color: #761818;
}

.rolltemplate-ironsworn .opportunity,
.rolltemplate-ironswornoracles .opportunity,
.rolltemplate-ironsworndelve .opportunity,
.rolltemplate-ironsworndelveoracles .opportunity {

  font-size: 0.9em;
  font-family: Verdana, arial, sans-serif;
  font-variant: small-caps;
  font-style: italic;
  font-weight: bold;
  text-align: left;
}

.rolltemplate-ironsworndelve .rarity-die {
  border-top: 2px solid #000000;
  color: #ffffff;
  background-color: #6a286a;
  border-bottom: 2px solid #000000;
}


.sheet-misses-track
  margin-top 1em
  width 47em
  margin-left 118px

.sheet-clear-miss
  display: inline
  width: 100%
  font-weight: bold
  font-size: 14px
  padding 0
  margin 1em
  height 40px
  padding 0.2em 0.2em 0.2em 0.2em
  border: 2px solid #494a4c
  cursor: pointer

.sheet-clear-miss:hover
  background-color: #ccc
  color: #4C4D4F
  transition .5s ease

.sheet-miss-input
  margin 0 !important

input.sheet-optional-track-failures:checked ~ div.sheet-optional-track-failures
  show-hide(0.3s)
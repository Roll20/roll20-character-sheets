.grid.skills
    .header
        h1(data-i18n='skills')
    .grid.body.2column.core-skills
        each val in skills
            .row.col-3(class=`${val} ${classNotation}`)
                +checkboxInput(`${val} check`)
                +rollButton(val)
                +numberInput(val)
    .grid.body.2column.combat-skills
        .row.subheader.mt.flex-center
            +accentSubheader('combat skills')
        each val in combatSkills
            .row.col-3
                +checkboxInput(`${val} check`)
                +rollButton(val)
                +numberInput(val)
    .row.subheader.mt.flex-center
        +accentSubheader('other')
    .repeating-container
        fieldset(class='repeating_skills')
            .row
                +checkboxInput(`check`)
                +textInput('name')
                +numberInput('skill')
                +repeatingRollButton('skill')